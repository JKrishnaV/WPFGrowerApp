<UserControl x:Class="WPFGrowerApp.Views.Dialogs.ContainerEditDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels.Dialogs"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:ContainerEditDialogViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="500" d:DesignWidth="600">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </UserControl.Resources>

    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8"
                         UniformCornerRadius="8"
                         Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="Auto"/> <!-- Container Info Section -->
                <RowDefinition Height="Auto"/> <!-- Weight and Value Section -->
                <RowDefinition Height="Auto"/> <!-- Additional Info Section -->
                <RowDefinition Height="Auto"/> <!-- Action Buttons -->
            </Grid.RowDefinitions>

            <!-- Dialog Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="Package" 
                                       Width="32" Height="32" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"/>
                <TextBlock Text="{Binding WindowTitle}" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Container Info Section -->
            <Border Grid.Row="1" 
                    Margin="0,0,0,15" 
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Container Code -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Container Code" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ContainerData.ContainerCode, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 MaxLength="10"
                                 CharacterCasing="Upper"
                                 materialDesign:HintAssist.Hint="10 chars max"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>

                    <!-- Container Name -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Container Name" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ContainerData.ContainerName, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 MaxLength="100"
                                 materialDesign:HintAssist.Hint="Container description"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Weight and Value Section -->
            <Border Grid.Row="2" 
                    Margin="0,0,0,15" 
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Tare Weight -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Tare Weight (lbs)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ContainerData.TareWeight, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 materialDesign:HintAssist.Hint="Weight in pounds"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>

                    <!-- Container Value -->
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Container Value ($)" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ContainerData.Value, UpdateSourceTrigger=PropertyChanged, StringFormat=F2}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 materialDesign:HintAssist.Hint="Value in dollars"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Additional Info Section -->
            <Border Grid.Row="3" 
                    Margin="0,0,0,15" 
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Display Order -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Display Order" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBox Text="{Binding ContainerData.DisplayOrder, UpdateSourceTrigger=PropertyChanged}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 materialDesign:HintAssist.Hint="Sort order"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>
                    </StackPanel>

                    <!-- Active Status -->
                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                        <CheckBox Content="Active" 
                                  IsChecked="{Binding ContainerData.IsActive}"
                                  IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                                  FontWeight="SemiBold"
                                  Margin="0"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,15,0,0">
                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Visibility="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#3F51B5"
                        BorderBrush="#3F51B5"
                        Foreground="White"
                        Width="100"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="#757575"
                        Foreground="#757575"
                        Width="100"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>
