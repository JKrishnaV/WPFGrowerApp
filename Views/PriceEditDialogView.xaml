<UserControl x:Class="WPFGrowerApp.Views.PriceEditDialogView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels.Dialogs"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PriceEditDialogViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="700" d:DesignWidth="900">
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:ValidationErrorToBorderBrushConverter x:Key="ValidationErrorToBorderBrushConverter"/>
        
        <Style x:Key="PriceTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="IsReadOnly" Value="{Binding IsReadOnly}"/>
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="False"/>
            <Setter Property="Padding" Value="8,8,8,8"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#3F51B5"/>
        </Style>

        <Style x:Key="GradeTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>

    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp8"
                         UniformCornerRadius="8"
                         Margin="20">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="Auto"/> <!-- Product/Process/Date -->
                <RowDefinition Height="Auto"/> <!-- Time Premium -->
                <RowDefinition Height="*"/>    <!-- Price Levels TabControl -->
                <RowDefinition Height="Auto"/> <!-- Warning Banner -->
                <RowDefinition Height="Auto"/> <!-- Action Buttons -->
            </Grid.RowDefinitions>

            <!-- Dialog Title -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <materialDesign:PackIcon Kind="CurrencyUsd" 
                                       Width="32" Height="32" 
                                       VerticalAlignment="Center" 
                                       Margin="0,0,10,0"/>
                <TextBlock Text="{Binding Title}" 
                           Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                           VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Product/Process/Date Selection -->
            <Border Grid.Row="1" 
                    Margin="0,0,0,15" 
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Product -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Product" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Products}"
                                  SelectedItem="{Binding SelectedProduct}"
                                  DisplayMemberPath="Description"
                                  IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                                  materialDesign:HintAssist.Hint="Select Product"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    </StackPanel>

                    <!-- Process -->
                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Process Type" FontWeight="Bold" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Processes}"
                                  SelectedItem="{Binding SelectedProcess}"
                                  DisplayMemberPath="Description"
                                  IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                                  materialDesign:HintAssist.Hint="Select Process"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    </StackPanel>

                    <!-- Effective Date -->
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Effective Date" FontWeight="Bold" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding EffectiveDate}"
                                    IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                                    materialDesign:HintAssist.Hint="Date on/after"
                                    Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Time Premium Section -->
            <Border Grid.Row="2" 
                    Margin="0,0,0,15" 
                    Padding="15"
                    Background="#F5F5F5"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="4">
                <StackPanel>
                    <CheckBox Content="Pay Time Based Premium" 
                              IsChecked="{Binding TimePremiumEnabled}"
                              IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                              FontWeight="Bold"
                              Margin="0,0,0,10"/>

                    <Grid IsEnabled="{Binding TimePremiumEnabled}">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                   Text="Up to" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>

                        <TextBox Grid.Column="1" 
                                 Text="{Binding PremiumTime}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 materialDesign:HintAssist.Hint="Time (e.g., 10:10)"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                        <TextBlock Grid.Column="2" 
                                   Text="Can $" 
                                   VerticalAlignment="Center" 
                                   Margin="20,0,10,0"/>

                        <TextBox Grid.Column="3" 
                                 Text="{Binding CanadianPremium, StringFormat=F2}"
                                 IsReadOnly="{Binding IsReadOnly}"
                                 materialDesign:HintAssist.Hint="Premium Amount"
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                        <TextBlock Grid.Column="4" 
                                   Text="(Premium for early deliveries)" 
                                   FontStyle="Italic"
                                   FontSize="12"
                                   Foreground="Gray"
                                   VerticalAlignment="Center"
                                   Margin="20,0,0,0"/>
                    </Grid>
                </StackPanel>
            </Border>

            <!-- Price Levels TabControl -->
            <TabControl Grid.Row="3" 
                       SelectedIndex="{Binding SelectedTabIndex}"
                       Style="{StaticResource MaterialDesignTabControl}">
                
                <!-- Level 1 Tab -->
                <TabItem Header="Price Level 1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Canadian Prices - Level 1 (Most growers use this level)"
                                       FontSize="12"
                                       Foreground="Gray"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Advance 1" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Advance 2" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Advance 3" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Final" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Grade 1 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Grade 1" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" 
                                         Text="{Binding CL1G1A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G1A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="2" 
                                         Text="{Binding CL1G1A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G1A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="3" 
                                         Text="{Binding CL1G1A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G1A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="4" 
                                         Text="{Binding CL1G1FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G1FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 2 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Grade 2" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" 
                                         Text="{Binding CL1G2A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G2A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="2" 
                                         Text="{Binding CL1G2A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G2A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="3" 
                                         Text="{Binding CL1G2A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G2A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="4" 
                                         Text="{Binding CL1G2FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G2FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 3 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade 3" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" 
                                         Text="{Binding CL1G3A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G3A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="2" 
                                         Text="{Binding CL1G3A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G3A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="3" 
                                         Text="{Binding CL1G3A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G3A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="4" 
                                         Text="{Binding CL1G3FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                         Style="{StaticResource PriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G3FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Level 2 Tab (similar structure) -->
                <TabItem Header="Price Level 2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Canadian Prices - Level 2"
                                       FontSize="12"
                                       Foreground="Gray"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Advance 1" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Advance 2" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Advance 3" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Final" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Grade 1 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Grade 1" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CL2G1A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G1A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CL2G1A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G1A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CL2G1A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G1A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding CL2G1FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G1FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>

                                <!-- Grade 2 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Grade 2" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CL2G2A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G2A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CL2G2A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G2A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CL2G2A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G2A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding CL2G2FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G2FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>

                                <!-- Grade 3 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade 3" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CL2G3A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G3A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CL2G3A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G3A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding CL2G3A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G3A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="4" Text="{Binding CL2G3FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL2G3FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Level 3 Tab (similar structure) -->
                <TabItem Header="Price Level 3">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="Canadian Prices - Level 3"
                                       FontSize="12"
                                       Foreground="Gray"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Advance 1" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Advance 2" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Advance 3" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Final" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Grade 1 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Grade 1" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CL3G1A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G1A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CL3G1A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G1A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CL3G1A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G1A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="1" Grid.Column="4" Text="{Binding CL3G1FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G1FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>

                                <!-- Grade 2 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Grade 2" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CL3G2A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G2A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CL3G2A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G2A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CL3G2A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G2A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="2" Grid.Column="4" Text="{Binding CL3G2FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G2FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>

                                <!-- Grade 3 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade 3" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CL3G3A1, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G3A1Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CL3G3A2, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G3A2Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding CL3G3A3, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G3A3Error, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                                <TextBox Grid.Row="3" Grid.Column="4" Text="{Binding CL3G3FN, StringFormat=F2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource PriceTextBoxStyle}" BorderBrush="{Binding HasL3G3FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}" BorderThickness="2"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Unsaved Changes Warning Banner -->
            <Border Grid.Row="4"
                    Background="#FFF9C4"
                    BorderBrush="#FFA000"
                    BorderThickness="2"
                    CornerRadius="4"
                    Padding="15"
                    Margin="0,10,0,10"
                    Visibility="{Binding ShowWarningBanner, Converter={StaticResource BooleanToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon Grid.Column="0"
                                           Kind="AlertCircle"
                                           Width="24" Height="24"
                                           VerticalAlignment="Center"
                                           Foreground="#F57C00"
                                           Margin="0,0,10,0"/>

                    <TextBlock Grid.Column="1"
                               Text="You have unsaved changes. Do you want to discard them?"
                               VerticalAlignment="Center"
                               FontWeight="SemiBold"
                               Foreground="#F57C00"/>

                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <Button Content="Discard Changes"
                                Command="{Binding ConfirmDiscardCommand}"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Foreground="#D32F2F"
                                Margin="0,0,5,0"/>
                        <Button Content="Keep Editing"
                                Command="{Binding CancelDiscardCommand}"
                                Style="{StaticResource MaterialDesignRaisedButton}"
                                Background="#F57C00"/>
                    </StackPanel>
                </Grid>
            </Border>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="5" 
                       Orientation="Horizontal" 
                       HorizontalAlignment="Right" 
                       Margin="0,15,0,0">
                <Button Content="Save" 
                        Command="{Binding SaveCommand}"
                        Visibility="{Binding IsReadOnly, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="#3F51B5"
                        BorderBrush="#3F51B5"
                        Foreground="White"
                        Width="100"
                        Margin="0,0,10,0"/>
                <Button Content="Cancel" 
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        BorderBrush="#757575"
                        Foreground="#757575"
                        Width="100"/>
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</UserControl>

