<UserControl x:Class="WPFGrowerApp.Views.PriceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PriceViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{DynamicResource MaterialDesignPaper}"
             Focusable="True"
             x:Name="priceView">
    
    <UserControl.InputBindings>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row 0: Breadcrumb -->
            <RowDefinition Height="Auto"/> <!-- Row 1: Title -->
            <RowDefinition Height="Auto"/> <!-- Row 2: Search/Filter Bar -->
            <RowDefinition Height="Auto"/> <!-- Row 3: Statistics -->
            <RowDefinition Height="*"/>    <!-- Row 4: Main Content (DataGrid) -->
            <RowDefinition Height="Auto"/> <!-- Row 5: Status Bar -->
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Style="{StaticResource BreadcrumbNavigationStyle}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NavigateToDashboardCommand}"
                        Padding="5,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Home" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Dashboard" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Command="{Binding NavigateToSettingsCommand}"
                        Padding="5,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Cog" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Settings" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="CurrencyUsd" Width="16" Height="16" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Price Management" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- View Title -->
        <TextBlock Grid.Row="1" 
                   Text="Price Management" 
                   Style="{StaticResource StandardizedViewTitleStyle}"/>

        <!-- Search/Filter Bar -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,10">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>      <!-- Search -->
                    <ColumnDefinition Width="Auto"/>   <!-- Product Filter -->
                    <ColumnDefinition Width="Auto"/>   <!-- Process Filter -->
                    <ColumnDefinition Width="Auto"/>   <!-- Lock Status Filter -->
                    <ColumnDefinition Width="Auto"/>   <!-- Clear Filters -->
                    <ColumnDefinition Width="Auto"/>   <!-- Add New -->
                    <ColumnDefinition Width="Auto"/>   <!-- Refresh -->
                    <ColumnDefinition Width="Auto"/>   <!-- Help -->
                </Grid.ColumnDefinitions>

                <!-- Search TextBox -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search by product or process name..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Product Filter -->
                <ComboBox Grid.Column="1"
                          ItemsSource="{Binding Products}"
                          SelectedItem="{Binding FilterProduct}"
                          DisplayMemberPath="Description"
                          materialDesign:HintAssist.Hint="Product"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Width="150"
                          Margin="0,0,10,0"/>

                <!-- Process Filter -->
                <ComboBox Grid.Column="2"
                          ItemsSource="{Binding Processes}"
                          SelectedItem="{Binding FilterProcess}"
                          DisplayMemberPath="Description"
                          materialDesign:HintAssist.Hint="Process"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Width="150"
                          Margin="0,0,10,0"/>

                <!-- Lock Status Filter -->
                <ComboBox Grid.Column="3"
                          ItemsSource="{Binding LockStatusOptions}"
                          SelectedItem="{Binding FilterLockStatus}"
                          materialDesign:HintAssist.Hint="Lock Status"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Width="120"
                          Margin="0,0,10,0"/>

                <!-- Clear Filters Button -->
                <Button Grid.Column="4"
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="90"
                        Margin="0,0,5,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="FilterRemove" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>

                <!-- Add New Button -->
                <Button Grid.Column="5"
                        Command="{Binding AddPriceCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="120"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Add New"/>
                    </StackPanel>
                </Button>

                <!-- Refresh Button -->
                <Button Grid.Column="6"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh (F5)"
                        Width="40"
                        Margin="0,0,5,0">
                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                </Button>

                <!-- Help Button -->
                <Button Grid.Column="7"
                        Command="{Binding ShowHelpCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Show help (F1)"
                        Width="40">
                    <materialDesign:PackIcon Kind="HelpCircle" 
                                           Width="20" Height="20"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Statistics Card -->
        <materialDesign:Card Grid.Row="3" Margin="0,0,0,10" 
                             Background="{DynamicResource PrimaryHueLightBrush}">
            <Grid Margin="15">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CurrencyUsd" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding FilteredPrices.Count, StringFormat='{}{0} Prices'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                              Margin="0,0,20,0"/>
                    
                    <materialDesign:PackIcon Kind="Lock" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding LockedPricesCount, StringFormat='{}{0} Locked'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Price List -->
        <materialDesign:Card Grid.Row="4" Style="{StaticResource MainContentAreaStyle}">
            <DataGrid x:Name="PricesDataGrid"
                      ItemsSource="{Binding FilteredPrices}" 
                      SelectedItem="{Binding SelectedPrice, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True" 
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="13 10 8 10"
                      MouseDoubleClick="PricesDataGrid_MouseDoubleClick">
                
                <!-- Row styling for locked records -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                        <Setter Property="ToolTip" Value="{Binding LockStatusTooltip}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsAnyLocked}" Value="True">
                                <Setter Property="Background" Value="#FFF3E0"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
                
                <DataGrid.Columns>
                    <!-- Locking Status Column -->
                    <DataGridTemplateColumn Header="ðŸ”’" Width="50" CanUserSort="True" SortMemberPath="IsAnyLocked">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <materialDesign:PackIcon Kind="Lock" 
                                        Visibility="{Binding Price.Adv1Used, Converter={StaticResource BoolToVis}}"
                                        ToolTip="Advance 1 Used" 
                                        Foreground="#D32F2F" 
                                        Width="16" Height="16"
                                        Margin="1"/>
                                    <materialDesign:PackIcon Kind="Lock" 
                                        Visibility="{Binding Price.Adv2Used, Converter={StaticResource BoolToVis}}"
                                        ToolTip="Advance 2 Used" 
                                        Foreground="#F57C00" 
                                        Width="16" Height="16"
                                        Margin="1"/>
                                    <materialDesign:PackIcon Kind="Lock" 
                                        Visibility="{Binding Price.Adv3Used, Converter={StaticResource BoolToVis}}"
                                        ToolTip="Advance 3 Used" 
                                        Foreground="#FBC02D" 
                                        Width="16" Height="16"
                                        Margin="1"/>
                                    <materialDesign:PackIcon Kind="LockCheck" 
                                        Visibility="{Binding Price.FinUsed, Converter={StaticResource BoolToVis}}"
                                        ToolTip="Final Payment Used" 
                                        Foreground="#388E3C" 
                                        Width="16" Height="16"
                                        Margin="1"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                    <DataGridTextColumn Header="ID" Binding="{Binding Price.PriceID}" Width="60">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="140"/>
                    <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="140"/>
                    <DataGridTextColumn Header="Effective Date" Binding="{Binding Price.From, StringFormat='{}{0:MMM dd, yyyy}'}" Width="120"/>
                    
                    <!-- Level 1 Grade 1 Price Columns -->
                    <DataGridTextColumn Header="L1G1 A1" Binding="{Binding Price.CL1G1A1, StringFormat='C2'}" Width="80"/>
                    <DataGridTextColumn Header="L1G1 A2" Binding="{Binding Price.CL1G1A2, StringFormat='C2'}" Width="80"/>
                    <DataGridTextColumn Header="L1G1 A3" Binding="{Binding Price.CL1G1A3, StringFormat='C2'}" Width="80"/>
                    <DataGridTextColumn Header="L1G1 Final" Binding="{Binding Price.CL1G1FN, StringFormat='C2'}" Width="90"/>
                    
                    <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                                    <!-- View Button -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Width="30" Height="30"
                                           ToolTip="View Price"
                                           Click="ViewPrice_Click"
                                           Tag="{Binding}">
                                        <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                    </Button>
                                    
                                    <!-- Edit Button -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Width="30" Height="30"
                                           ToolTip="Edit Price"
                                           Click="EditPrice_Click"
                                           Tag="{Binding}">
                                        <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                    </Button>
                                    
                                    <!-- Delete Button -->
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                           Width="30" Height="30"
                                           ToolTip="Delete Price"
                                           Click="DeletePrice_Click"
                                           Tag="{Binding}"
                                           Foreground="IndianRed">
                                        <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="5" Style="{StaticResource StatusFooterBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Prices: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding FilteredPrices.Count}"/>
                    <TextBlock Text=" | " Margin="5,0"/>
                    <TextBlock Text="Last Updated: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LastUpdated}"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Loading Indicator -->
        <materialDesign:Card Grid.Row="0" 
                            Grid.RowSpan="6"
                            Style="{StaticResource LoadingIndicatorStyle}"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0"
                            IsIndeterminate="True"/>
                <TextBlock Text="Loading prices..."
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
