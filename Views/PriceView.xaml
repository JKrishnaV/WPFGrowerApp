<UserControl x:Class="WPFGrowerApp.Views.PriceView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:PriceViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="700"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNo"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Title -->
            <RowDefinition Height="*"/>    <!-- DataGrid -->
            <RowDefinition Height="Auto"/> <!-- Buttons -->
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Product Pricing" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Margin="0,0,0,15"/>

        <!-- Price List -->
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Prices}" 
                  SelectedItem="{Binding SelectedPrice, Mode=TwoWay}"
                  AutoGenerateColumns="False" 
                  IsReadOnly="True" 
                  CanUserAddRows="False"
                  SelectionMode="Single"
                  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                  materialDesign:DataGridAssist.ColumnHeaderPadding="8"
                  MaxHeight="400"
                  Margin="0,0,0,10">
            
            <!-- Row styling for locked records -->
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Setter Property="ToolTip" Value="{Binding LockStatusTooltip}"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsAnyLocked}" Value="True">
                            <Setter Property="Background" Value="#FFF3E0"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            
            <DataGrid.Columns>
                <!-- Locking Status Column -->
                <DataGridTemplateColumn Header="ðŸ”’" Width="50" CanUserSort="True" SortMemberPath="IsAnyLocked">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <materialDesign:PackIcon Kind="Lock" 
                                    Visibility="{Binding Price.Adv1Used, Converter={StaticResource BoolToVis}}"
                                    ToolTip="Advance 1 Used" 
                                    Foreground="#D32F2F" 
                                    Width="16" Height="16"
                                    Margin="1"/>
                                <materialDesign:PackIcon Kind="Lock" 
                                    Visibility="{Binding Price.Adv2Used, Converter={StaticResource BoolToVis}}"
                                    ToolTip="Advance 2 Used" 
                                    Foreground="#F57C00" 
                                    Width="16" Height="16"
                                    Margin="1"/>
                                <materialDesign:PackIcon Kind="Lock" 
                                    Visibility="{Binding Price.Adv3Used, Converter={StaticResource BoolToVis}}"
                                    ToolTip="Advance 3 Used" 
                                    Foreground="#FBC02D" 
                                    Width="16" Height="16"
                                    Margin="1"/>
                                <materialDesign:PackIcon Kind="LockCheck" 
                                    Visibility="{Binding Price.FinUsed, Converter={StaticResource BoolToVis}}"
                                    ToolTip="Final Payment Used" 
                                    Foreground="#388E3C" 
                                    Width="16" Height="16"
                                    Margin="1"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                
                <DataGridTextColumn Header="ID" Binding="{Binding Price.PriceID}" Width="60"/>
                <DataGridTextColumn Header="Product" Binding="{Binding ProductName}" Width="110"/>
                <DataGridTextColumn Header="Process" Binding="{Binding ProcessName}" Width="110"/>
                <DataGridTextColumn Header="From Date" Binding="{Binding Price.From, StringFormat='d'}" Width="95"/>
                
                <!-- Expanded Price Columns - Level 1 Grade 1 -->
                <DataGridTextColumn Header="L1G1 A1" Binding="{Binding Price.CL1G1A1, StringFormat='C2'}" Width="80"/>
                <DataGridTextColumn Header="L1G1 A2" Binding="{Binding Price.CL1G1A2, StringFormat='C2'}" Width="80"/>
                <DataGridTextColumn Header="L1G1 A3" Binding="{Binding Price.CL1G1A3, StringFormat='C2'}" Width="80"/>
                <DataGridTextColumn Header="L1G1 Final" Binding="{Binding Price.CL1G1FN, StringFormat='C2'}" Width="85"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add New Price" 
                    Command="{Binding AddPriceCommand}" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Margin="5"/>
            <Button Content="View" 
                    Command="{Binding ViewPriceCommand}" 
                    Style="{StaticResource MaterialDesignOutlinedButton}" 
                    Margin="5"
                    ToolTip="View price details (read-only)"/>
            <Button Content="Edit" 
                    Command="{Binding EditPriceCommand}" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Margin="5"/>
            <Button Content="Delete" 
                    Command="{Binding DeletePriceCommand}" 
                    Style="{StaticResource MaterialDesignRaisedButton}" 
                    Background="IndianRed" 
                    Foreground="White" 
                    Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
