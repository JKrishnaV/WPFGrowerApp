<UserControl x:Class="WPFGrowerApp.Views.ReceiptView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="15,10" Margin="0,0,0,15" CornerRadius="4">
            <Grid>
                <TextBlock Text="Receipt Management"
                          Foreground="White"
                          FontSize="{DynamicResource ScaledFontSizeHeader}"
                          FontWeight="SemiBold"
                          HorizontalAlignment="Center"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Filters and Pagination Section -->
        <materialDesign:Card Grid.Row="1" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Filters" 
                          Style="{StaticResource MaterialDesignSubtitle1TextBlock}" 
                          Margin="0,0,0,10"/>
                
                <!-- Filters Row -->
                <Grid Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Search Box -->
                    <TextBox Grid.Column="0" 
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="Search by Receipt #, Grower Name, or Grower ID"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,10,0"/>

                    <!-- Start Date -->
                    <DatePicker Grid.Column="1"
                               SelectedDate="{Binding StartDate}"
                               materialDesign:HintAssist.Hint="Start Date"
                               Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                               Margin="0,0,10,0"/>

                    <!-- End Date -->
                    <DatePicker Grid.Column="2"
                               SelectedDate="{Binding EndDate}"
                               materialDesign:HintAssist.Hint="End Date"
                               Style="{StaticResource MaterialDesignOutlinedDatePicker}"
                               Margin="0,0,10,0"/>

                    <!-- Show Voided -->
                    <StackPanel Grid.Column="3" 
                               Orientation="Horizontal" 
                               VerticalAlignment="Center"
                               Margin="0,0,10,0">
                        <TextBlock Text="Show Voided:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,0"/>
                        <ToggleButton IsChecked="{Binding ShowVoidedReceipts}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </StackPanel>

                    <!-- Filter Buttons -->
                    <StackPanel Grid.Column="4" 
                               Orientation="Horizontal">
                        <Button Command="{Binding LoadReceiptsCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Margin="0,0,5,0"
                               ToolTip="Apply Filters">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Filter" 
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,5,0"/>
                                <TextBlock Text="Apply"/>
                            </StackPanel>
                        </Button>
                        <Button Command="{Binding ClearFiltersCommand}"
                               Style="{StaticResource MaterialDesignOutlinedButton}"
                               ToolTip="Clear Filters">
                            <materialDesign:PackIcon Kind="FilterRemove"/>
                        </Button>
                    </StackPanel>
                </Grid>

                <!-- Pagination Row -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Page Size Selector -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Records per page:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,10,0"/>
                        <ComboBox SelectedValue="{Binding PageSize}"
                                 SelectedValuePath="Tag"
                                 Width="100"
                                 Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBoxItem Content="50" Tag="50"/>
                            <ComboBoxItem Content="100" Tag="100" IsSelected="True"/>
                            <ComboBoxItem Content="200" Tag="200"/>
                            <ComboBoxItem Content="500" Tag="500"/>
                            <ComboBoxItem Content="1000" Tag="1000"/>
                            <ComboBoxItem Content="All" Tag="-1"/>
                        </ComboBox>
                    </StackPanel>

                    <!-- Page Info -->
                    <TextBlock Grid.Column="1" 
                              Text="{Binding PageInfo}"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center"
                              Style="{StaticResource MaterialDesignBody1TextBlock}"
                              FontWeight="SemiBold"/>

                    <!-- Pagination Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Command="{Binding FirstPageCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               ToolTip="First Page"
                               Margin="0,0,5,0">
                            <materialDesign:PackIcon Kind="PageFirst"/>
                        </Button>
                        <Button Command="{Binding PreviousPageCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               ToolTip="Previous Page"
                               Margin="0,0,5,0">
                            <materialDesign:PackIcon Kind="ChevronLeft"/>
                        </Button>
                        <TextBlock Text="{Binding CurrentPage}"
                                  VerticalAlignment="Center"
                                  Margin="10,0"
                                  FontWeight="Bold"
                                  FontSize="16"/>
                        <Button Command="{Binding NextPageCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               ToolTip="Next Page"
                               Margin="5,0,0,0">
                            <materialDesign:PackIcon Kind="ChevronRight"/>
                        </Button>
                        <Button Command="{Binding LastPageCommand}"
                               Style="{StaticResource MaterialDesignIconButton}"
                               ToolTip="Last Page"
                               Margin="5,0,0,0">
                            <materialDesign:PackIcon Kind="PageLast"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </materialDesign:Card>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,10">
            <Button Command="{Binding AddReceiptCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Add Receipt"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding EditReceiptCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Pencil" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Edit"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding VoidReceiptCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,5,0"
                   Background="Orange">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Cancel" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Void"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding DeleteReceiptCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Margin="0,0,5,0"
                   Background="Red">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Delete" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Delete"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding ViewReceiptDetailsCommand}"
                   Style="{StaticResource MaterialDesignOutlinedButton}"
                   Margin="0,0,5,0">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Details"/>
                </StackPanel>
            </Button>

            <Button Command="{Binding RefreshCommand}"
                   Style="{StaticResource MaterialDesignOutlinedButton}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Refresh"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <!-- Data Grid -->
        <materialDesign:Card Grid.Row="3">
            <Grid>
                <DataGrid ItemsSource="{Binding Receipts}"
                         SelectedItem="{Binding SelectedReceipt}"
                         AutoGenerateColumns="False"
                         CanUserAddRows="False"
                         CanUserDeleteRows="False"
                         IsReadOnly="True"
                         SelectionMode="Single"
                         Style="{StaticResource MaterialDesignDataGrid}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Receipt #" 
                                          Binding="{Binding ReceiptNumberModern}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Date" 
                                          Binding="{Binding ReceiptDate, StringFormat='{}{0:yyyy-MM-dd}'}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="Time" 
                                          Binding="{Binding ReceiptTime, StringFormat='{}{0:hh\\:mm}'}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Grower #" 
                                          Binding="{Binding GrowerNumber}" 
                                          Width="90"/>
                        <DataGridTextColumn Header="Grower Name" 
                                          Binding="{Binding GrowerName}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Gross (lbs)" 
                                          Binding="{Binding GrossWeight, StringFormat='{}{0:N2}'}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Tare (lbs)" 
                                          Binding="{Binding TareWeight, StringFormat='{}{0:N2}'}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Net (lbs)" 
                                          Binding="{Binding NetWeight, StringFormat='{}{0:N2}'}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Dock %" 
                                          Binding="{Binding DockPercentage, StringFormat='{}{0:N2}'}" 
                                          Width="80">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Final (lbs)" 
                                          Binding="{Binding FinalWeight, StringFormat='{}{0:N2}'}" 
                                          Width="100">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                    <Setter Property="FontWeight" Value="Bold"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Grade" 
                                          Binding="{Binding GradeModern}" 
                                          Width="60"/>
                        <DataGridCheckBoxColumn Header="Voided" 
                                              Binding="{Binding IsVoidedModern}" 
                                              Width="70"/>
                        <DataGridTextColumn Header="Created By" 
                                          Binding="{Binding CreatedBy}" 
                                          Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Loading Overlay -->
                <Grid Background="#80FFFFFF" 
                     Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                    Value="0"
                                    IsIndeterminate="True"
                                    Width="50"
                                    Height="50"/>
                        <TextBlock Text="Loading..." 
                                  Margin="0,10,0,0"
                                  FontSize="16"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Statistics Section -->
        <materialDesign:Card Grid.Row="4" Padding="15" Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Receipts" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding TotalReceiptCount}" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Total Gross Weight" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding TotalGrossWeight, StringFormat='{}{0:N2} lbs'}" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Total Net Weight" 
                              Style="{StaticResource MaterialDesignBody2TextBlock}"
                              Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <TextBlock Text="{Binding TotalNetWeight, StringFormat='{}{0:N2} lbs'}" 
                              Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                              FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="3" HorizontalAlignment="Right">
                    <TextBlock Text="{Binding StatusMessage}" 
                              Style="{StaticResource MaterialDesignBody1TextBlock}"
                              Foreground="{DynamicResource PrimaryHueMidBrush}"
                              FontStyle="Italic"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>
    </Grid>
</UserControl>
