<UserControl x:Class="WPFGrowerApp.Views.PaymentBatchDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type vm:PaymentBatchDetailViewModel}}"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesignPaper}"
             Focusable="True">
    
    <!-- Keyboard Shortcuts -->
    <UserControl.InputBindings>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
            <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Breadcrumb -->
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="Auto"/>  <!-- Financial Cards -->
            <RowDefinition Height="*"/>     <!-- TabControl -->
            <RowDefinition Height="Auto"/>  <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Style="{StaticResource BreadcrumbNavigationStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Breadcrumb Path -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateToDashboardCommand}"
                            Padding="5,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Home" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Dashboard" FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" VerticalAlignment="Center" Margin="5,0"/>
                    <Button Style="{StaticResource MaterialDesignFlatButton}"
                            Command="{Binding NavigateBackToBatchListCommand}"
                            Padding="5,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CashMultiple" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Payment Batches" FontSize="12"/>
                        </StackPanel>
                    </Button>
                    <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" VerticalAlignment="Center" Margin="5,0"/>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding SelectedBatch.BatchNumber}" FontSize="12" FontWeight="SemiBold"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Help Button (Right Side) -->
                <Button Grid.Column="1"
                        Command="{Binding ShowHelpCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Show help (F1)"
                        Width="32"
                        Height="32"
                        Margin="0,0,8,0"
                        VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="HelpCircleOutline" 
                                           Width="20" Height="20"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Button>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Header with Batch Info -->
        <materialDesign:Card Grid.Row="1" Margin="0,10,0,10" materialDesign:ElevationAssist.Elevation="Dp2">
            <Grid Margin="15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="FileDocument" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="{Binding SelectedBatch.BatchNumber}" FontSize="20" FontWeight="Bold"/>
                        <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                            <TextBlock Text="{Binding SelectedBatch.PaymentTypeName}" FontSize="12" Margin="0,0,10,0"/>
                            <TextBlock Text="•" FontSize="12" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding SelectedBatch.BatchDate, StringFormat='{}{0:MMM dd, yyyy}'}" FontSize="12" Margin="0,0,10,0"/>
                            <TextBlock Text="•" FontSize="12" Margin="0,0,10,0"/>
                            <TextBlock Text="{Binding SelectedBatch.CropYear, StringFormat='Year: {0}'}" FontSize="12"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>

                <Border Grid.Column="1" CornerRadius="12" Padding="12,4" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Background" Value="#4CAF50"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding StatusDisplayText}" Value="Draft">
                                    <Setter Property="Background" Value="#FFC107"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding StatusDisplayText}" Value="Voided">
                                    <Setter Property="Background" Value="#F44336"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="{Binding StatusDisplayText}" Foreground="White" FontWeight="SemiBold" FontSize="14"/>
                </Border>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Export to Excel Button -->
                    <Button Command="{Binding ExportToExcelCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Export to Excel"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}">
                        <materialDesign:PackIcon Kind="FileExcel" 
                                               Width="20" Height="20"
                                               Foreground="#107C41"/>
                    </Button>

                    <!-- Export to PDF Button -->
                    <Button Command="{Binding ExportToPdfCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Export to PDF"
                            Width="36"
                            Height="36"
                            Margin="0,0,8,0"
                            IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}">
                        <materialDesign:PackIcon Kind="FilePdfBox"  
                                               Width="20" Height="20"
                                               Foreground="#D32F2F"/>
                    </Button>

                    <!-- Print Button -->
                    <Button Command="{Binding PrintBatchReportCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Print Report"
                            Width="36"
                            Height="36"
                            Margin="0,0,15,0"
                            IsEnabled="{Binding IsExporting, Converter={StaticResource InverseBooleanConverter}}">
                        <materialDesign:PackIcon Kind="Printer" 
                                               Width="20" Height="20"
                                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    </Button>
                </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Command="{Binding RefreshCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="100"
                            Margin="0,0,8,0"
                            ToolTip="Refresh (F5)">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Refresh"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding NavigateBackToBatchListCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ArrowLeft" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Back"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Financial Summary Cards -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Amount Card -->
            <materialDesign:Card Grid.Column="0" Margin="0,0,5,0" materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Total Amount" FontSize="12" Opacity="0.7"/>
                    <TextBlock Grid.Row="1" Text="{Binding BatchSummary.TotalAmount, StringFormat='${0:N2}'}" 
                               FontSize="24" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Grid>
            </materialDesign:Card>

            <!-- Total Growers Card -->
            <materialDesign:Card Grid.Column="1" Margin="5,0,5,0" materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Growers" FontSize="12" Opacity="0.7"/>
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <TextBlock Text="{Binding BatchSummary.TotalGrowers}" FontSize="24" FontWeight="Bold"/>
                        <TextBlock Text="{Binding BatchSummary.ActiveGrowers, StringFormat=' ({0} active)'}" 
                                   FontSize="12" VerticalAlignment="Bottom" Margin="5,0,0,5"/>
                    </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- Total Receipts Card -->
            <materialDesign:Card Grid.Column="2" Margin="5,0,5,0" materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Receipts" FontSize="12" Opacity="0.7"/>
                    <TextBlock Grid.Row="1" Text="{Binding BatchSummary.TotalReceipts}" 
                               FontSize="24" FontWeight="Bold"/>
                </Grid>
            </materialDesign:Card>

            <!-- Cheques Generated Card -->
            <materialDesign:Card Grid.Column="3" Margin="5,0,0,0" materialDesign:ElevationAssist.Elevation="Dp4">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0" Text="Cheques" FontSize="12" Opacity="0.7"/>
                    <TextBlock Grid.Row="1" Text="{Binding BatchSummary.ChequesGenerated}" 
                               FontSize="24" FontWeight="Bold"/>
                </Grid>
            </materialDesign:Card>
        </Grid>

        <!-- TabControl with 4 tabs -->
        <materialDesign:Card Grid.Row="3" Style="{StaticResource MainContentAreaStyle}">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        materialDesign:ColorZoneAssist.Mode="PrimaryMid">
                
                <!-- Tab 1: Grower Payments -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="AccountGroup" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Grower Payments" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>  <!-- Search Box -->
                            <RowDefinition Height="*"/>     <!-- ListView -->
                        </Grid.RowDefinitions>

                        <!-- Search Box -->
                        <TextBox Grid.Row="0"
                                 Text="{Binding GrowerSearchText, UpdateSourceTrigger=PropertyChanged}"
                                 materialDesign:HintAssist.Hint="Search growers..."
                                 Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 Margin="0,0,0,10"/>

                        <!-- Grower Payments ListView -->
                        <ListView Grid.Row="1" ItemsSource="{Binding FilteredGrowerPayments}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Grower #" DisplayMemberBinding="{Binding GrowerNumber}" Width="Auto"/>
                                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding GrowerName}" Width="Auto"/>
                                    <GridViewColumn Header="Receipts" DisplayMemberBinding="{Binding ReceiptCount}" Width="Auto"/>
                                    <GridViewColumn Header="Weight (lbs)" DisplayMemberBinding="{Binding TotalWeight, StringFormat='{}{0:N2}'}" Width="Auto"/>
                                    <GridViewColumn Header="Amount" DisplayMemberBinding="{Binding TotalAmount, StringFormat='${0:N2}'}" Width="Auto"/>
                                    <GridViewColumn Header="Cheque #" DisplayMemberBinding="{Binding ChequeNumber}" Width="Auto"/>
                                    <GridViewColumn Header="Payment Method" DisplayMemberBinding="{Binding PaymentMethodName}" Width="Auto"/>
                                    <GridViewColumn Header="Status" Width="Auto">
                                        <GridViewColumn.CellTemplate>
                                            <DataTemplate>
                                                <Border CornerRadius="8" Padding="6,2" HorizontalAlignment="Center">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="#4CAF50"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsOnHold}" Value="True">
                                                                    <Setter Property="Background" Value="#FFC107"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <TextBlock Foreground="White" FontSize="10" FontWeight="SemiBold">
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="Text" Value="Active"/>
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding IsOnHold}" Value="True">
                                                                        <Setter Property="Text" Value="On-Hold"/>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </Border>
                                            </DataTemplate>
                                        </GridViewColumn.CellTemplate>
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </TabItem>

                <!-- Tab 2: Receipt Allocations -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Receipt" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Receipt Allocations" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter ComboBox -->
                        <ComboBox Grid.Row="0"
                                  ItemsSource="{Binding GrowerFilterOptions}"
                                  SelectedValue="{Binding SelectedGrowerFilter}"
                                  SelectedValuePath="GrowerId"
                                  DisplayMemberPath="DisplayText"
                                  materialDesign:HintAssist.Hint="Filter by Grower"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Width="250"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,10"/>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding FilteredAllocations}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  EnableRowVirtualization="True"
                                  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="13 10 8 10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Receipt #" Binding="{Binding ReceiptNumber}" Width="100"/>
                                <DataGridTextColumn Header="Date" Binding="{Binding AllocatedAt, StringFormat='{}{0:MMM dd, yyyy}'}" Width="100"/>
                                <DataGridTextColumn Header="Grower" Binding="{Binding GrowerName}" Width="150"/>
                                <DataGridTextColumn Header="Weight (lbs)" Binding="{Binding QuantityPaid, StringFormat='{}{0:N2}'}" Width="100"/>
                                <DataGridTextColumn Header="Price/lb" Binding="{Binding PricePerPound, StringFormat='${0:N4}'}" Width="90"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding AmountPaid, StringFormat='${0:N2}'}" Width="100">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Tab 3: Cheques -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="CashCheck" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Cheques" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Filter ComboBox -->
                        <ComboBox Grid.Row="0"
                                  ItemsSource="{Binding ChequeStatusOptions}"
                                  SelectedItem="{Binding SelectedChequeStatusFilter}"
                                  materialDesign:HintAssist.Hint="Filter by Status"
                                  Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Width="200"
                                  HorizontalAlignment="Left"
                                  Margin="0,0,0,10"/>

                        <!-- DataGrid -->
                        <DataGrid Grid.Row="1"
                                  ItemsSource="{Binding FilteredCheques}"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  SelectionMode="Single"
                                  VirtualizingPanel.IsVirtualizing="True"
                                  VirtualizingPanel.VirtualizationMode="Recycling"
                                  EnableRowVirtualization="True"
                                  materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                                  materialDesign:DataGridAssist.ColumnHeaderPadding="13 10 8 10">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Cheque #" Binding="{Binding DisplayChequeNumber, TargetNullValue='', FallbackValue=''}" Width="Auto"/>
                                <DataGridTextColumn Header="Grower" Binding="{Binding GrowerName, TargetNullValue='', FallbackValue=''}" Width="Auto"/>
                                <DataGridTextColumn Header="Amount" Binding="{Binding ChequeAmount, StringFormat='${0:N2}', TargetNullValue='', FallbackValue=''}" Width="120">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="FontWeight" Value="SemiBold"/>
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn Header="Status" Width="100">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Border CornerRadius="10" Padding="8,2" HorizontalAlignment="Left">
                                                <Border.Style>
                                                    <Style TargetType="Border">
                                                        <Setter Property="Background" Value="#4CAF50"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Issued">
                                                                <Setter Property="Background" Value="#2196F3"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Status}" Value="Voided">
                                                                <Setter Property="Background" Value="#F44336"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                                <TextBlock Text="{Binding Status, TargetNullValue='', FallbackValue=''}" Foreground="White" FontWeight="SemiBold" FontSize="11"/>
                                            </Border>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn Header="Printed" Binding="{Binding PrintedAt, StringFormat='{}{0:MMM dd, yyyy}', TargetNullValue='', FallbackValue=''}" Width="100"/>
                                <DataGridTextColumn Header="Cleared" Binding="{Binding ClearedDate, StringFormat='{}{0:MMM dd, yyyy}', TargetNullValue='', FallbackValue=''}" Width="100"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>

                <!-- Tab 4: Analytics -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ChartLine" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Analytics" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>  <!-- Quick Stats Cards -->
                                <RowDefinition Height="Auto"/>  <!-- Charts Row 1 -->
                                <RowDefinition Height="Auto"/>  <!-- Charts Row 2 -->
                            </Grid.RowDefinitions>

                            <!-- Quick Stats Cards -->
                            <Grid Grid.Row="0" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Average Payment per Grower -->
                                <materialDesign:Card Grid.Column="0" Margin="0,0,5,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Avg Payment/Grower" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Grid.Row="1" Text="{Binding AnalyticsSummary.AveragePaymentPerGrower, StringFormat='${0:N2}'}" 
                                                   FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                                    </Grid>
                                </materialDesign:Card>

                                <!-- Largest Payment -->
                                <materialDesign:Card Grid.Column="1" Margin="5,0,5,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Largest Payment" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Grid.Row="1" Text="{Binding AnalyticsSummary.LargestPayment, StringFormat='${0:N2}'}" 
                                                   FontSize="20" FontWeight="Bold" Foreground="{DynamicResource SecondaryHueMidBrush}"/>
                                    </Grid>
                                </materialDesign:Card>

                                <!-- Payment Range -->
                                <materialDesign:Card Grid.Column="2" Margin="5,0,5,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Payment Range" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Grid.Row="1" Text="{Binding AnalyticsSummary.PaymentRange}" 
                                                   FontSize="16" FontWeight="Bold"/>
                                    </Grid>
                                </materialDesign:Card>

                                <!-- Total Weight -->
                                <materialDesign:Card Grid.Column="3" Margin="5,0,0,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock Grid.Row="0" Text="Total Weight" FontSize="12" Opacity="0.7"/>
                                        <TextBlock Grid.Row="1" Text="{Binding AnalyticsSummary.TotalWeight, StringFormat='{}{0:N0} lbs'}" 
                                                   FontSize="20" FontWeight="Bold"/>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Charts Row 1 -->
                            <Grid Grid.Row="1" Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Payment Distribution Chart -->
                                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <TextBlock Text="Payment Distribution" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                        <!-- Chart area with intelligent empty state -->
                                        <Border Height="200" Background="#F5F5F5" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <Grid>
                                                <!-- Chart placeholder (hidden when no data) -->
                                                <Border Visibility="{Binding AnalyticsSummary.HasPaymentDistributionData, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Payment Distribution Chart" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center" 
                                                               Foreground="#666666"/>
                                                </Border>
                                                
                                                <!-- Empty state message -->
                                                <StackPanel Visibility="{Binding AnalyticsSummary.HasPaymentDistributionData, Converter={StaticResource InverseBooleanConverter}}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="ChartBar" Width="48" Height="48" 
                                                                             Foreground="{DynamicResource MaterialDesignDivider}" 
                                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="No Distribution Data" 
                                                               FontSize="16" FontWeight="SemiBold"
                                                               HorizontalAlignment="Center" 
                                                               Margin="0,10,0,5"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <TextBlock Text="Payment distribution charts require multiple growers with different payment amounts to display meaningful insights."
                                                               FontSize="12" 
                                                               HorizontalAlignment="Center" 
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               MaxWidth="250"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </materialDesign:Card>

                                <!-- Grower Count by Payment Range -->
                                <materialDesign:Card Grid.Column="1" Margin="10,0,0,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <TextBlock Text="Growers by Payment Range" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                        <!-- Chart area with intelligent empty state -->
                                        <Border Height="200" Background="#F5F5F5" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <Grid>
                                                <!-- Chart placeholder (hidden when no data) -->
                                                <Border Visibility="{Binding AnalyticsSummary.HasPaymentRangeData, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Payment Range Chart" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center" 
                                                               Foreground="#666666"/>
                                                </Border>
                                                
                                                <!-- Empty state message -->
                                                <StackPanel Visibility="{Binding AnalyticsSummary.HasPaymentRangeData, Converter={StaticResource InverseBooleanConverter}}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="ChartPie" Width="48" Height="48" 
                                                                             Foreground="{DynamicResource MaterialDesignDivider}" 
                                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="No Range Data" 
                                                               FontSize="16" FontWeight="SemiBold"
                                                               HorizontalAlignment="Center" 
                                                               Margin="0,10,0,5"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <TextBlock Text="Range analysis requires multiple growers across different payment amounts to show meaningful distribution patterns."
                                                               FontSize="12" 
                                                               HorizontalAlignment="Center" 
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               MaxWidth="250"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>

                            <!-- Charts Row 2 -->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Product Breakdown -->
                                <materialDesign:Card Grid.Column="0" Margin="0,0,10,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <TextBlock Text="Product Breakdown" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                        <!-- Chart area with intelligent empty state -->
                                        <Border Height="200" Background="#F5F5F5" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1">
                                            <Grid>
                                                <!-- Chart placeholder (hidden when no data) -->
                                                <Border Visibility="{Binding AnalyticsSummary.HasProductBreakdownData, Converter={StaticResource BooleanToVisibilityConverter}}">
                                                    <TextBlock Text="Product Breakdown Chart" 
                                                               HorizontalAlignment="Center" 
                                                               VerticalAlignment="Center" 
                                                               Foreground="#666666"/>
                                                </Border>
                                                
                                                <!-- Empty state message -->
                                                <StackPanel Visibility="{Binding AnalyticsSummary.HasProductBreakdownData, Converter={StaticResource InverseBooleanConverter}}"
                                                           HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="ChartDoughnut" Width="48" Height="48" 
                                                                             Foreground="{DynamicResource MaterialDesignDivider}" 
                                                                             HorizontalAlignment="Center"/>
                                                    <TextBlock Text="No Product Data" 
                                                               FontSize="16" FontWeight="SemiBold"
                                                               HorizontalAlignment="Center" 
                                                               Margin="0,10,0,5"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                    <TextBlock Text="Product breakdown charts require multiple product types with different amounts to display meaningful insights."
                                                               FontSize="12" 
                                                               HorizontalAlignment="Center" 
                                                               TextWrapping="Wrap"
                                                               TextAlignment="Center"
                                                               MaxWidth="250"
                                                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </Grid>
                                </materialDesign:Card>

                                <!-- Anomaly Indicators -->
                                <materialDesign:Card Grid.Column="1" Margin="10,0,0,0" materialDesign:ElevationAssist.Elevation="Dp4">
                                    <Grid Margin="15">
                                        <TextBlock Text="Data Anomalies" FontSize="16" FontWeight="Bold" Margin="0,0,0,15"/>
                                        <StackPanel>
                                            <!-- Anomaly indicators will be added here -->
                                            <Border Background="#FFF3E0" BorderBrush="#FF9800" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Alert" Foreground="#FF9800" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding AnalyticsSummary.AnomalyCount, StringFormat='{}{0} anomalies detected'}" 
                                                               FontWeight="SemiBold" Foreground="#E65100"/>
                                                </StackPanel>
                                            </Border>
                                            
                                            <Border Background="#E8F5E8" BorderBrush="#4CAF50" BorderThickness="1" CornerRadius="4" Padding="10" Margin="0,0,0,10">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Check" Foreground="#4CAF50" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="No unusual payment patterns" 
                                                               FontWeight="SemiBold" Foreground="#2E7D32"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#E3F2FD" BorderBrush="#2196F3" BorderThickness="1" CornerRadius="4" Padding="10">
                                                <StackPanel Orientation="Horizontal">
                                                    <materialDesign:PackIcon Kind="Information" Foreground="#2196F3" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                    <TextBlock Text="{Binding AnalyticsSummary.ComparisonNote}" 
                                                               FontWeight="SemiBold" Foreground="#1565C0"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </Grid>
                                </materialDesign:Card>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Tab 5: Batch Parameters -->
                <TabItem>
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="InformationOutline" Width="18" Height="18" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBlock Text="Batch Info" VerticalAlignment="Center"/>
                        </StackPanel>
                    </TabItem.Header>
                    <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="10">
                        <TextBlock Text="{Binding BatchParameters}" 
                                   FontFamily="Consolas"
                                   FontSize="12"
                                   LineHeight="18"
                                   TextWrapping="Wrap"/>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </materialDesign:Card>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="4" Style="{StaticResource StatusFooterBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Batch: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SelectedBatch.BatchNumber}"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Created: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding SelectedBatch.CreatedAt, StringFormat='{}{0:MMM dd, yyyy}'}"/>
                    <TextBlock Text=" by " Margin="3,0"/>
                    <TextBlock Text="{Binding SelectedBatch.CreatedBy}"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Loading Indicator -->
        <materialDesign:Card Grid.Row="0" 
                            Grid.RowSpan="5"
                            Style="{StaticResource LoadingIndicatorStyle}"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0"
                            IsIndeterminate="True"/>
                <TextBlock Text="Loading batch details..."
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"/>
            </StackPanel>
        </materialDesign:Card>

        <!-- Exporting Indicator -->
        <materialDesign:Card Grid.Row="0" 
                            Grid.RowSpan="5"
                            Style="{StaticResource LoadingIndicatorStyle}"
                            Visibility="{Binding IsExporting, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0"
                            IsIndeterminate="True"/>
                <TextBlock Text="Exporting batch data..."
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>

