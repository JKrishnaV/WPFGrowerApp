<UserControl x:Class="WPFGrowerApp.Views.ImportUserControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFGrowerApp.Views"
        xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
        mc:Ignorable="d">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" 
                Padding="15,10" 
                Margin="0,0,0,20"
                CornerRadius="4">
            <TextBlock Text="Import Receipts" 
                       Foreground="White" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- File Selection Section -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Select Receipt Files" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Content="Browse Files"
                        Command="{Binding BrowseFilesCommand}"
                        Padding="15,5"
                        IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"
                        Style="{StaticResource PrimaryButtonStyle}"/>
                
                <TextBlock Grid.Column="1"
                           Text="{Binding SelectedFiles.Count, StringFormat={}{0} files selected}"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>
            </Grid>
        </StackPanel>

        <!-- Depot Selection Section -->
        <StackPanel Grid.Row="2" Margin="0,0,0,20">
            <TextBlock Text="Depot" 
                       FontSize="16" 
                       FontWeight="SemiBold" 
                       Margin="0,0,0,10"/>
            
            <TextBox Text="{Binding Depot, UpdateSourceTrigger=PropertyChanged}"
                     Style="{StaticResource ModernTextBoxStyle}"
                     Margin="0,0,0,20"
                     IsEnabled="{Binding IsImporting, Converter={StaticResource InverseBooleanConverter}}"/>

            <!-- Files List and Progress Section -->
            <Grid Margin="0,0,0,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Overall Progress -->
                <StackPanel Grid.Row="0" Margin="0,0,0,10">
                    <TextBlock Text="Overall Progress" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>
                    
                    <ProgressBar Height="20" 
                                Value="{Binding Progress}"
                                Margin="0,0,0,5"/>
                    
                    <TextBlock Text="{Binding StatusMessage}"
                               Margin="0,0,0,10"/>
                </StackPanel>

                <!-- Files List -->
                <ListView Grid.Row="1" 
                          ItemsSource="{Binding SelectedFiles}"
                          BorderThickness="1"
                          BorderBrush="{StaticResource PrimaryLightBrush}"
                          Margin="0,0,0,10"
                          MaxHeight="200">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="{Binding FilePath}"
                                           TextTrimming="CharacterEllipsis"
                                           VerticalAlignment="Center"/>

                                <ProgressBar Grid.Column="1"
                                            Value="{Binding Progress}"
                                            Width="100"
                                            Height="15"
                                            Margin="10,0"
                                            VerticalAlignment="Center"/>

                                <TextBlock Grid.Column="2"
                                           Text="{Binding Status}"
                                           VerticalAlignment="Center"
                                           Margin="10,0"/>

                                <Button Grid.Column="3"
                                        Content="Remove"
                                        Command="{Binding DataContext.RemoveFileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"
                                        Padding="10,5"
                                        IsEnabled="{Binding DataContext.IsImporting, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource InverseBooleanConverter}}"
                                        Style="{StaticResource SecondaryButtonStyle}"/>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Errors List -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Errors" 
                               FontSize="16" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,10"/>

                    <ListView Grid.Row="1" 
                              ItemsSource="{Binding Errors}"
                              BorderThickness="1"
                              BorderBrush="{StaticResource PrimaryLightBrush}"
                              MaxHeight="100">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}"
                                           TextWrapping="Wrap"
                                           Foreground="Red"/>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Grid>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button Content="Cancel"
                    Command="{Binding CancelImportCommand}"
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Style="{StaticResource SecondaryButtonStyle}"/>
            
            <Button Content="Start Import"
                    Command="{Binding StartImportCommand}"
                    Padding="15,5"
                    Style="{StaticResource PrimaryButtonStyle}"/>
        </StackPanel>
    </Grid>
</UserControl>
