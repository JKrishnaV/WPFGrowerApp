<UserControl x:Class="WPFGrowerApp.Views.Reports.ExportOptionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="600">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/WPFGrowerApp;component/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <materialDesign:Card Style="{StaticResource FilterPanelStyle}">
        <Expander Header="Export Options" IsExpanded="True">
            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Export Format Selection -->
                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,10,15">
                    <TextBlock Text="Export Format" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,5"/>
                    <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,0,5">
                        <ComboBoxItem Content="PDF"/>
                        <ComboBoxItem Content="Excel"/>
                        <ComboBoxItem Content="CSV"/>
                        <ComboBoxItem Content="Word"/>
                    </ComboBox>
                </StackPanel>
                
                <!-- File Options -->
                <StackPanel Grid.Row="0" Grid.Column="1" Margin="10,0,0,15">
                    <TextBlock Text="File Options" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,5"/>
                    <CheckBox Content="Open after export" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                    <CheckBox Content="Show export progress" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                    <CheckBox Content="Include charts" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                    <CheckBox Content="Include summary statistics" Style="{StaticResource MaterialDesignCheckBox}"/>
                </StackPanel>
                
                <!-- PDF Specific Options -->
                <materialDesign:Card Grid.Row="1" Grid.Column="0" Margin="0,0,10,15" 
                                     Style="{StaticResource FilterPanelStyle}">
                    <StackPanel>
                        <TextBlock Text="PDF Options" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,10"/>
                        <CheckBox Content="Password protected" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,5"/>
                        <PasswordBox Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                                     materialDesign:HintAssist.Hint="Password (if protected)"
                                     Margin="0,0,0,5"/>
                        <CheckBox Content="Include watermark" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Watermark text"
                                 Margin="0,0,0,5"/>
                        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,5">
                            <ComboBoxItem Content="A4 Portrait"/>
                            <ComboBoxItem Content="A4 Landscape"/>
                            <ComboBoxItem Content="Letter Portrait"/>
                            <ComboBoxItem Content="Letter Landscape"/>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Excel Specific Options -->
                <materialDesign:Card Grid.Row="1" Grid.Column="1" Margin="10,0,0,15" 
                                     Style="{StaticResource FilterPanelStyle}">
                    <StackPanel>
                        <TextBlock Text="Excel Options" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,10"/>
                        <CheckBox Content="Multiple sheets" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                        <CheckBox Content="Include pivot tables" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                        <CheckBox Content="Include charts" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                        <CheckBox Content="Auto-fit columns" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Sheet name"
                                 Text="Payment Summary"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- CSV Specific Options -->
                <materialDesign:Card Grid.Row="2" Grid.Column="0" Margin="0,0,10,15" 
                                     Style="{StaticResource FilterPanelStyle}">
                    <StackPanel>
                        <TextBlock Text="CSV Options" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,10"/>
                        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                  Margin="0,0,0,5">
                            <ComboBoxItem Content="Comma (,)" IsSelected="True"/>
                            <ComboBoxItem Content="Semicolon (;)"/>
                            <ComboBoxItem Content="Tab"/>
                            <ComboBoxItem Content="Pipe (|)"/>
                        </ComboBox>
                        <CheckBox Content="Include headers" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                        <CheckBox Content="Quote all fields" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,5"/>
                        <ComboBox Style="{StaticResource MaterialDesignOutlinedComboBox}">
                            <ComboBoxItem Content="UTF-8" IsSelected="True"/>
                            <ComboBoxItem Content="ASCII"/>
                            <ComboBoxItem Content="Unicode"/>
                        </ComboBox>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Word Specific Options -->
                <materialDesign:Card Grid.Row="2" Grid.Column="1" Margin="10,0,0,15" 
                                     Style="{StaticResource FilterPanelStyle}">
                    <StackPanel>
                        <TextBlock Text="Word Options" Style="{StaticResource MaterialDesignBody2TextBlock}" Margin="0,0,0,10"/>
                        <CheckBox Content="Include charts" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,2"/>
                        <CheckBox Content="Include tables" Style="{StaticResource MaterialDesignCheckBox}" Margin="0,0,0,5"/>
                        <TextBox Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                 materialDesign:HintAssist.Hint="Document title"
                                 Text="Payment Summary Report"/>
                    </StackPanel>
                </materialDesign:Card>
                
                <!-- Action Buttons -->
                <StackPanel Grid.Row="3" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Right" 
                            Margin="0,15,0,0">
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="0,0,10,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Download" Width="16" Height="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Export"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Style="{StaticResource MaterialDesignOutlinedButton}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Margin="0,0,5,0"/>
                                <TextBlock Text="Cancel"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Grid>
        </Expander>
    </materialDesign:Card>
</UserControl>
