<UserControl x:Class="WPFGrowerApp.Views.ChequePreparationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Focusable="True">
    
    <UserControl.InputBindings>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row 0: Breadcrumb -->
            <RowDefinition Height="Auto"/> <!-- Row 1: Title -->
            <RowDefinition Height="Auto"/> <!-- Row 2: Search/Filter Bar -->
            <RowDefinition Height="Auto"/> <!-- Row 3: Statistics -->
            <RowDefinition Height="Auto"/> <!-- Row 4: Main Content (DataGrid) -->
            <RowDefinition Height="Auto"/> <!-- Row 5: Status Bar -->
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Style="{StaticResource BreadcrumbNavigationStyle}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0"
                        Command="{Binding NavigateToDashboardCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Home" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Dashboard" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0"
                        Command="{Binding NavigateToPaymentManagementCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CreditCard" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Payment Management" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="CheckbookArrowRight" Width="16" Height="16" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Cheque Preparation" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- View Title -->
        <TextBlock Grid.Row="1" 
                   Text="Cheque Preparation" 
                   Style="{StaticResource StandardizedViewTitleStyle}"/>

        <!-- Search/Filter Bar -->
        <materialDesign:Card Grid.Row="2" Style="{StaticResource FiltersActionsPanelStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>        <!-- Search -->
                    <ColumnDefinition Width="Auto"/>     <!-- Cheque # Filter -->
                    <ColumnDefinition Width="Auto"/>     <!-- Grower # Filter -->
                    <ColumnDefinition Width="Auto"/>     <!-- Status Filter -->
                    <ColumnDefinition Width="Auto"/>     <!-- Search Button -->
                    <ColumnDefinition Width="Auto"/>     <!-- Clear Button -->
                    <ColumnDefinition Width="Auto"/>     <!-- Print Selected -->
                    <ColumnDefinition Width="Auto"/>     <!-- Refresh -->
                    <ColumnDefinition Width="Auto"/>     <!-- Help -->
                </Grid.ColumnDefinitions>

                <!-- Search TextBox -->
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Search cheques by number, grower name, or amount..."
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                    </TextBox.InputBindings>
                </TextBox>

                <!-- Cheque # Filter -->
                <TextBox Grid.Column="1"
                         Text="{Binding ChequeNumberFilter, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Cheque #"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="120"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>

                <!-- Grower # Filter -->
                <TextBox Grid.Column="2"
                         Text="{Binding GrowerNumberFilter, UpdateSourceTrigger=PropertyChanged}"
                         materialDesign:HintAssist.Hint="Grower #"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Width="120"
                         VerticalAlignment="Center"
                        Margin="0,0,10,0"/>

                <!-- Status Filter -->
                <ComboBox Grid.Column="3"
                          SelectedItem="{Binding StatusFilter}"
                          materialDesign:HintAssist.Hint="Status"
                          Style="{StaticResource MaterialDesignOutlinedComboBox}"
                          Width="120"
                          VerticalAlignment="Center"
                          Margin="0,0,10,0">
                    <ComboBoxItem Content="All"/>
                    <ComboBoxItem Content="Generated"/>
                    <ComboBoxItem Content="Printed"/>
                    <ComboBoxItem Content="Delivered"/>
                </ComboBox>

                <!-- Search Button -->
                <Button Grid.Column="4"
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="100"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Search"/>
                    </StackPanel>
                </Button>

                <!-- Clear Button -->
                <Button Grid.Column="5"
                        Command="{Binding ClearFiltersCommand}"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="90"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Clear"/>
                    </StackPanel>
                </Button>

                <!-- Print Selected Button -->
                <Button Grid.Column="6"
                        Command="{Binding PrintSelectedCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="140"
                        Margin="0,0,10,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Printer" Width="16" Height="16" Margin="0,0,5,0"/>
                        <TextBlock Text="Print Selected"/>
                    </StackPanel>
                </Button>

                <!-- Refresh Button -->
                <Button Grid.Column="7"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh (F5)"
                        Width="40"
                        Margin="0,0,5,0">
                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                </Button>

                <!-- Help Button -->
                <Button Grid.Column="8"
                        Command="{Binding ShowHelpCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Show help (F1)"
                        Width="40">
                    <materialDesign:PackIcon Kind="HelpCircle" 
                                           Width="20" Height="20"
                                           Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </Button>
            </Grid>
        </materialDesign:Card>

        <!-- Statistics Card -->
        <materialDesign:Card Grid.Row="3" Margin="0,0,0,5" 
                             Background="{DynamicResource PrimaryHueLightBrush}">
            <Grid Margin="15,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,30,0">
                    <materialDesign:PackIcon Kind="CheckbookArrowRight" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding Cheques.Count, StringFormat='{}{0} Cheques Ready'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0,0,30,0">
                    <materialDesign:PackIcon Kind="CurrencyUsd" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat='{}{0:C} Total'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
        </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="0,0,30,0">
                    <materialDesign:PackIcon Kind="CurrencyUsd" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding SelectedAmount, StringFormat='{}{0:C} Selected'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CheckboxMarked" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding SelectedCount, StringFormat='{}{0} Selected'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
            </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Cheques List -->
        <materialDesign:Card Grid.Row="4" Style="{StaticResource MainContentAreaStyle}" Margin="0,5,0,0">            
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="Loading" 
                                            Width="40" 
                                            Height="40" 
                                            Margin="0,0,0,10"
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Loading cheques..." 
                              HorizontalAlignment="Center"
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                </StackPanel>

                <!-- Data Grid -->
            <DataGrid ItemsSource="{Binding Cheques}" 
                          SelectedItem="{Binding SelectedCheque, Mode=TwoWay}"
                      AutoGenerateColumns="False" 
                          IsReadOnly="True"
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                          CanUserSortColumns="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow"
                          MinHeight="200"
                          MaxHeight="500"
                          VerticalScrollBarVisibility="Auto"
                          materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="13 10 8 10"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                          AlternatingRowBackground="{DynamicResource MaterialDesignAlternatingRowBackground}"
                          RowHeaderWidth="0"
                          x:Name="ChequesDataGrid"
                          MouseLeftButtonDown="ChequesDataGrid_MouseLeftButtonDown">
                <DataGrid.Columns>
                        <!-- Select Column -->
                        <DataGridTemplateColumn Header="Select" Width="60" CanUserSort="False" CanUserResize="False">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>

                        <!-- Cheque # Column -->
                    <DataGridTextColumn Header="Cheque #" 
                                            Binding="{Binding ChequeNumber, TargetNullValue='', FallbackValue=''}" 
                                            Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="FontSize" Value="14"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Grower Column -->
                    <DataGridTextColumn Header="Grower" 
                                            Binding="{Binding GrowerName, TargetNullValue='', FallbackValue=''}" 
                                        Width="200"/>

                        <!-- Amount Column -->
                    <DataGridTextColumn Header="Amount" 
                                            Binding="{Binding ChequeAmount, StringFormat='{}{0:C}', TargetNullValue='', FallbackValue=''}" 
                                            Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalAlignment" Value="Right"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <!-- Date Column -->
                    <DataGridTextColumn Header="Date" 
                                            Binding="{Binding ChequeDate, StringFormat='{}{0:MMM dd, yyyy}', TargetNullValue='', FallbackValue=''}" 
                                        Width="120"/>

                        <!-- Status Column -->
                        <DataGridTemplateColumn Header="Status" Width="100" SortMemberPath="Status">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                    <Border Background="{DynamicResource PrimaryHueMidBrush}"
                                          CornerRadius="10"
                                          Padding="8,2"
                                          HorizontalAlignment="Left"
                                          VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Status}"
                                                 Foreground="White"
                                                 FontWeight="SemiBold"
                                                 FontSize="11"
                                                 HorizontalAlignment="Center"
                                                 VerticalAlignment="Center"/>
                                    </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    
                        <!-- Series Column -->
                        <DataGridTextColumn Header="Series" 
                                            Binding="{Binding ChequeSeries.SeriesName, TargetNullValue='', FallbackValue=''}" 
                                            Width="120"/>

                        <!-- Actions Column -->
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="30" Height="30"
                                                ToolTip="Preview Cheque"
                                                Command="{Binding DataContext.PreviewSingleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="30" Height="30"
                                                ToolTip="Void Cheque"
                                            Command="{Binding DataContext.VoidSingleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                                Foreground="IndianRed">
                                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="30" Height="30"
                                                ToolTip="Stop Payment"
                                            Command="{Binding DataContext.StopSingleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                                Foreground="Orange">
                                            <materialDesign:PackIcon Kind="Stop" Width="16" Height="16"/>
                                        </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="5" Style="{StaticResource StatusFooterBarStyle}">
             <Grid> 
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Showing: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Cheques.Count}"/>
                    <TextBlock Text=" / " Margin="5,0"/>
                    <TextBlock Text="{Binding Cheques.Count}"/>
                    <TextBlock Text=" | " Margin="5,0"/>
                    <TextBlock Text="Last Updated: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LastUpdated}"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>
        
        <!-- Loading Indicator -->
        <materialDesign:Card Grid.Row="0" 
                            Grid.RowSpan="6"
                            Style="{StaticResource LoadingIndicatorStyle}"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0"
                            IsIndeterminate="True"/>
                <TextBlock Text="Loading cheques..."
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>