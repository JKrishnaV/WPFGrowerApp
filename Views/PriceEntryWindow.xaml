<Window x:Class="WPFGrowerApp.Views.PriceEntryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
        xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:PriceEntryViewModel, IsDesignTimeCreatable=False}"
        Title="{Binding WindowTitle}"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="White"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{StaticResource MaterialDesignFont}"
        Loaded="Window_Loaded">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
        <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <converters:ValidationErrorToBorderBrushConverter x:Key="ValidationErrorToBorderBrushConverter"/>
        
        <Style x:Key="PriceTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="IsReadOnly" Value="{Binding DataContext.IsReadOnly, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="False"/>
            <Setter Property="Padding" Value="8,8,8,8"/>
        </Style>

        <Style x:Key="FinalPriceTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Width" Value="90"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="TextAlignment" Value="Right"/>
            <Setter Property="IsReadOnly" Value="{Binding DataContext.IsReadOnly, RelativeSource={RelativeSource AncestorType=Window}}"/>
            <Setter Property="materialDesign:HintAssist.IsFloating" Value="False"/>
            <Setter Property="Padding" Value="8,8,8,8"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="#3F51B5"/>
        </Style>

        <Style x:Key="GradeTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="InfoTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Foreground" Value="Gray"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="10" 
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            Margin="0">
        <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding WindowTitle}" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,15"/>

        <!-- Product/Process Info -->
        <Border Grid.Row="1" 
                Margin="0,0,0,10" 
                Padding="15"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Product -->
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Product" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Products}"
                              SelectedItem="{Binding SelectedProduct}"
                              DisplayMemberPath="Description"
                              IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                              materialDesign:HintAssist.Hint="Select Product"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    <TextBlock Text="{Binding SelectedProduct.ProductId, StringFormat='ID: {0}'}" 
                               FontSize="11" 
                               Foreground="Gray" 
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Process -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Process Type" FontWeight="Bold" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Processes}"
                              SelectedItem="{Binding SelectedProcess}"
                              DisplayMemberPath="Description"
                              IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                              materialDesign:HintAssist.Hint="Select Process"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"/>
                    <TextBlock Text="{Binding SelectedProcess.ProcessId, StringFormat='ID: {0}'}" 
                               FontSize="11" 
                               Foreground="Gray" 
                               Margin="0,2,0,0"/>
                </StackPanel>

                <!-- Effective Date -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Effective Date" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EffectiveDate}"
                                IsEnabled="{Binding IsReadOnly, Converter={StaticResource InverseBooleanConverter}}"
                                materialDesign:HintAssist.Hint="Date on/after"
                                Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Time Premium Section -->
        <Border Grid.Row="2" 
                Margin="0,0,0,10" 
                Padding="15"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4">
            <StackPanel>
                <CheckBox Content="Pay Time Based Premium" 
                          IsChecked="{Binding TimePremiumEnabled}"
                          FontWeight="Bold"
                          Margin="0,0,0,10"/>

                <Grid IsEnabled="{Binding TimePremiumEnabled}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" 
                               Text="Up to" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>

                    <TextBox Grid.Column="1" 
                             Text="{Binding PremiumTime}"
                             materialDesign:HintAssist.Hint="Time (e.g., 10:10)"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBlock Grid.Column="2" 
                               Text="Can $" 
                               VerticalAlignment="Center" 
                               Margin="20,0,10,0"/>

                    <TextBox Grid.Column="3" 
                             Text="{Binding CanadianPremium, StringFormat=F2}"
                             materialDesign:HintAssist.Hint="Premium Amount"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                    <TextBlock Grid.Column="4" 
                               Text="(Premium for early deliveries before specified time)" 
                               Style="{StaticResource InfoTextStyle}"
                               VerticalAlignment="Center"
                               FontStyle="Italic"
                               Margin="20,0,0,0"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Price Tabs -->
        <Border Grid.Row="3" 
                Padding="10"
                Background="White"
                BorderBrush="#E0E0E0"
                BorderThickness="1"
                CornerRadius="4">
            <TabControl SelectedIndex="{Binding SelectedTabIndex}"
                        Style="{StaticResource MaterialDesignTabControl}"
                        Background="White">
                
                <!-- Level 1 Tab -->
                <TabItem Header="Price Level 1">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Info Text -->
                            <TextBlock Grid.Row="0" 
                                       Text="Canadian Prices - Level 1 (Most growers use this level)"
                                       Style="{StaticResource InfoTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>

                            <!-- Price Grid -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Advance 1" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Advance 2" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Advance 3" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Final" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Grade 1 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Grade 1" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CL1G1A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CL1G1A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CL1G1A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="4" 
                                         Text="{Binding CL1G1FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G1FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 2 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Grade 2" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CL1G2A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CL1G2A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CL1G2A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="4" 
                                         Text="{Binding CL1G2FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G2FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 3 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade 3" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CL1G3A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CL1G3A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding CL1G3A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="4" 
                                         Text="{Binding CL1G3FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL1G3FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Level 2 Tab -->
                <TabItem Header="Price Level 2">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Info Text -->
                            <TextBlock Grid.Row="0" 
                                       Text="Canadian Prices - Level 2"
                                       Style="{StaticResource InfoTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>

                            <!-- Price Grid -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Advance 1" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Advance 2" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Advance 3" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Final" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Grade 1 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Grade 1" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CL2G1A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CL2G1A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CL2G1A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="4" 
                                         Text="{Binding CL2G1FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL2G1FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 2 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Grade 2" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CL2G2A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CL2G2A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CL2G2A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="4" 
                                         Text="{Binding CL2G2FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL2G2FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 3 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade 3" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CL2G3A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CL2G3A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding CL2G3A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="4" 
                                         Text="{Binding CL2G3FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL2G3FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>

                <!-- Level 3 Tab -->
                <TabItem Header="Price Level 3">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <Grid Margin="15">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- Info Text -->
                            <TextBlock Grid.Row="0" 
                                       Text="Canadian Prices - Level 3"
                                       Style="{StaticResource InfoTextStyle}"
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,15"/>

                            <!-- Price Grid -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Headers -->
                                <TextBlock Grid.Row="0" Grid.Column="0"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="Advance 1" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Advance 2" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="Advance 3" Style="{StaticResource HeaderTextStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Final" Style="{StaticResource HeaderTextStyle}"/>

                                <!-- Grade 1 -->
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Grade 1" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CL3G1A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="2" Text="{Binding CL3G1A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CL3G1A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="1" Grid.Column="4" 
                                         Text="{Binding CL3G1FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL3G1FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 2 -->
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Grade 2" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CL3G2A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="2" Text="{Binding CL3G2A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding CL3G2A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="2" Grid.Column="4" 
                                         Text="{Binding CL3G2FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL3G2FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>

                                <!-- Grade 3 -->
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Grade 3" Style="{StaticResource GradeTextStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding CL3G3A1, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="2" Text="{Binding CL3G3A2, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding CL3G3A3, StringFormat=F2}" Style="{StaticResource PriceTextBoxStyle}"/>
                                <TextBox Grid.Row="3" Grid.Column="4" 
                                         Text="{Binding CL3G3FN, StringFormat=F2}" 
                                         Style="{StaticResource FinalPriceTextBoxStyle}"
                                         BorderBrush="{Binding HasL3G3FNError, Converter={StaticResource ValidationErrorToBorderBrushConverter}}"
                                         BorderThickness="2"/>
                            </Grid>
                        </Grid>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Save" 
                    Command="{Binding SaveCommand}"
                    Visibility="{Binding IsReadOnly, Converter={StaticResource InverseBooleanToVisibilityConverter}}"
                    IsEnabled="{Binding IsSaving, Converter={StaticResource InverseBooleanConverter}}"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Background="#3F51B5"
                    BorderBrush="#3F51B5"
                    Foreground="White"
                    Width="100"
                    Margin="0,0,10,0"/>
            <Button Content="Cancel" 
                    Click="CancelButton_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    BorderBrush="#757575"
                    Foreground="#757575"
                    Width="100"/>
        </StackPanel>

        <!-- Loading Overlay -->
        <Grid Grid.RowSpan="5" 
              Background="#80000000" 
              Visibility="{Binding IsSaving, Converter={StaticResource BooleanToVisibilityConverter}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                             Style="{StaticResource MaterialDesignCircularProgressBar}"
                             Width="50" 
                             Height="50"
                             Foreground="White"/>
                <TextBlock Text="Saving..." 
                           Foreground="White" 
                           FontSize="16" 
                           Margin="0,10,0,0"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>
        </Grid>
    </Border>
</Window>
