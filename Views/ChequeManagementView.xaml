<UserControl x:Class="WPFGrowerApp.Views.ChequeManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:ChequeManagementViewModel}"
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesignPaper}"
             Focusable="True">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BoolToVisibilityConverter x:Key="BoolToVisConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Breadcrumb -->
            <RowDefinition Height="Auto"/>  <!-- Title -->
            <RowDefinition Height="Auto"/>  <!-- Search/Filter Bar -->
            <RowDefinition Height="Auto"/>  <!-- Statistics -->
            <RowDefinition Height="*"/>     <!-- Main Content (DataGrid) -->
            <RowDefinition Height="Auto"/>  <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Style="{StaticResource BreadcrumbNavigationStyle}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Home" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Dashboard" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="CheckbookArrowRight" Width="16" Height="16" 
                                           VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock Text="Cheque Management" FontSize="12" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Title -->
        <TextBlock Grid.Row="1" 
                   Text="Cheque Management" 
                   Style="{StaticResource StandardizedViewTitleStyle}"/>

        <!-- Search/Filter Bar -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,10">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Row 0: Search Criteria -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Cheque Number Search -->
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchChequeNumber, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Cheque Number"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,10,0"/>

                    <!-- Grower Number Search -->
                    <TextBox Grid.Column="1"
                             Text="{Binding SearchGrowerNumber, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Grower Number"
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,10,0"/>

                    <!-- Status Filter -->
                    <ComboBox Grid.Column="2"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SearchStatus}"
                              materialDesign:HintAssist.Hint="Status"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Width="150"
                              HorizontalAlignment="Left"/>
                </Grid>

                <!-- Row 1: Actions -->
                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Command="{Binding SearchCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Search"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ClearSearchCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="100"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Clear"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding RefreshCommand}"
                            Style="{StaticResource MaterialDesignIconButton}"
                            ToolTip="Refresh (F5)"
                            Width="40"
                            Margin="0,0,10,0">
                        <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                    </Button>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Statistics Card -->
        <materialDesign:Card Grid.Row="3" Margin="0,0,0,10"
                             Background="{DynamicResource PrimaryHueLightBrush}">
            <Grid Margin="15">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="CheckbookArrowRight" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding Cheques.Count, StringFormat='{}{0} Cheques'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Main Content - Cheque List -->
        <materialDesign:Card Grid.Row="4" Style="{StaticResource MainContentAreaStyle}">
            <DataGrid ItemsSource="{Binding Cheques}"
                      SelectedItem="{Binding SelectedCheque}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      SelectionMode="Single"
                      materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                      materialDesign:DataGridAssist.ColumnHeaderPadding="13 10 8 10">

                <DataGrid.Columns>
                    <!-- Cheque Number -->
                    <DataGridTextColumn Header="Cheque #" Binding="{Binding ChequeNumber}" Width="90">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="FontSize" Value="13"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Series -->
                    <DataGridTextColumn Header="Series" Binding="{Binding SeriesCode}" Width="70"/>

                    <!-- Grower Name -->
                    <DataGridTextColumn Header="Grower" Binding="{Binding GrowerName}" Width="*"/>

                    <!-- Cheque Date -->
                    <DataGridTextColumn Header="Date" 
                                        Binding="{Binding ChequeDate, StringFormat='{}{0:MMM dd, yyyy}'}" 
                                        Width="110"/>

                    <!-- Amount -->
                    <DataGridTextColumn Header="Amount" 
                                        Binding="{Binding ChequeAmount, StringFormat='${0:N2}'}" 
                                        Width="110">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Status -->
                    <DataGridTemplateColumn Header="Status" Width="90" SortMemberPath="Status">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Border CornerRadius="10"
                                        Padding="6,2"
                                        HorizontalAlignment="Center">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Background" Value="#4CAF50"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Status}" Value="Voided">
                                                    <Setter Property="Background" Value="#F44336"/>
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Status}" Value="Cleared">
                                                    <Setter Property="Background" Value="#2196F3"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock Text="{Binding Status}"
                                               Foreground="White"
                                               FontWeight="SemiBold"
                                               FontSize="10"/>
                                </Border>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Printed -->
                    <DataGridTemplateColumn Header="Printed" Width="80">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <materialDesign:PackIcon Kind="Check" 
                                                       Width="16" Height="16"
                                                       Foreground="Green"
                                                       Visibility="{Binding PrintedAt, Converter={StaticResource BoolToVisConverter}}"
                                                       HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Actions -->
                    <DataGridTemplateColumn Header="Actions" Width="180">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.ViewChequeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            ToolTip="View Details"
                                            Width="30" Height="30">
                                        <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.PrintChequeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            ToolTip="Print"
                                            Width="30" Height="30">
                                        <materialDesign:PackIcon Kind="Printer" Width="16" Height="16"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.VoidChequeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            ToolTip="Void"
                                            Width="30" Height="30"
                                            Foreground="IndianRed">
                                        <materialDesign:PackIcon Kind="Cancel" Width="16" Height="16"/>
                                    </Button>
                                    <Button Style="{StaticResource MaterialDesignIconButton}"
                                            Command="{Binding DataContext.ReissueChequeCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            ToolTip="Reissue"
                                            Width="30" Height="30">
                                        <materialDesign:PackIcon Kind="Restart" Width="16" Height="16"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </materialDesign:Card>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="5" Style="{StaticResource StatusFooterBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Total Cheques: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding Cheques.Count}"/>
                </StackPanel>

                <TextBlock Grid.Column="2"
                           Text="Double-click to view details | Right-click for actions"
                           FontStyle="Italic"
                           Opacity="0.7"/>
            </Grid>
        </materialDesign:ColorZone>

        <!-- Loading Indicator -->
        <materialDesign:Card Grid.Row="0" 
                            Grid.RowSpan="6"
                            Style="{StaticResource LoadingIndicatorStyle}"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisConverter}}">
            <StackPanel Orientation="Horizontal">
                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                            Value="0"
                            IsIndeterminate="True"/>
                <TextBlock Text="Loading cheques..."
                          VerticalAlignment="Center"
                          Margin="10,0,0,0"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>


