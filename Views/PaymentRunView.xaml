<UserControl x:Class="WPFGrowerApp.Views.PaymentRunView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:infra="clr-namespace:WPFGrowerApp.Infrastructure"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance Type=vm:PaymentRunViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="800" d:DesignWidth="1200"
             Background="{DynamicResource MaterialDesignPaper}">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Breadcrumb -->
            <RowDefinition Height="Auto"/> <!-- Title -->
                <RowDefinition Height="Auto"/> <!-- Main Parameters Card -->
                <RowDefinition Height="Auto"/> <!-- Enhanced Filters Card -->
                <RowDefinition Height="Auto"/> <!-- Preview Summary Card -->
                <RowDefinition Height="Auto"/> <!-- On Hold Growers & Run Log (Combined) -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Style="{StaticResource BreadcrumbNavigationStyle}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0"
                        Command="{Binding NavigateToDashboardCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Home" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Dashboard" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0"
                        Command="{Binding NavigateToPaymentManagementCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CreditCard" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Payment Management" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <TextBlock Text="Run Advance Payment" FontSize="12" VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:ColorZone>

            <TextBlock Grid.Row="1" Style="{StaticResource MaterialDesignHeadline5TextBlock}" 
                       Text="Run Advance Payment" Margin="0,0,0,16"/>

            <!-- Main Parameters Section -->
        <materialDesign:Card Grid.Row="2" Padding="16" Margin="0,0,0,16">
            <Grid>
                 <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Main Parameters -->
                        <RowDefinition Height="Auto"/> <!-- Filter Presets -->
                        <RowDefinition Height="Auto"/> <!-- Action Buttons -->
                </Grid.RowDefinitions>

                    <!-- Main Parameters Grid -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox Grid.Column="0" Margin="0,5"
                              materialDesign:HintAssist.Hint="Advance Number"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              ItemsSource="{Binding AdvanceOptions}"
                              DisplayMemberPath="Display"
                              SelectedValuePath="Value"
                              SelectedValue="{Binding AdvanceNumber}"/>

                    <DatePicker Grid.Column="2" Margin="0,5"
                                materialDesign:HintAssist.Hint="Payment Date"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                SelectedDate="{Binding PaymentDate}"/>

                        <!-- NEW: Receipt Date Range -->
                    <DatePicker Grid.Column="4" Margin="0,5"
                                    materialDesign:HintAssist.Hint="Receipt Date From"
                                    Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                    SelectedDate="{Binding ReceiptDateFrom}"/>

                        <DatePicker Grid.Column="6" Margin="0,5"
                                    materialDesign:HintAssist.Hint="Receipt Date To"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                SelectedDate="{Binding CutoffDate}"/>
                </Grid>

                    <!-- NEW: Filter Presets Row -->
                    <Grid Grid.Row="1" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Presets:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        
                        <ComboBox Grid.Column="1" Margin="0,0,8,0"
                                  materialDesign:HintAssist.Hint="Select Filter Preset"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  ItemsSource="{Binding FilterPresets}"
                                  SelectedItem="{Binding SelectedPreset}"
                                  DisplayMemberPath="Name"/>
                        
                        <Button Grid.Column="2" Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding LoadPresetCommand}"
                                Content="Load" Margin="0,0,4,0"/>
                        
                        <Button Grid.Column="3" Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding SavePresetCommand}"
                                Content="Save" Margin="0,0,4,0"/>
                        
                        <Button Grid.Column="4" Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding DeletePresetCommand}"
                                Content="Delete" Margin="0,0,8,0"/>

                        <TextBlock Grid.Column="6" Text="Crop Year:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        
                        <ComboBox Grid.Column="7" Width="100"
                                  Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  ItemsSource="{Binding CropYears}"
                                  SelectedValue="{Binding CropYear}"/>
                    </Grid>

                    <!-- Action Buttons -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
                        <Button Style="{StaticResource MaterialDesignRaisedButton}"
                                Command="{Binding PreviewCountCommand}"
                                Content="Preview Count"
                                ToolTip="Preview how many receipts will be included"
                                Margin="0,0,8,0"/>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding TestRunCommand}"
                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                            Content="Test Run (Dialog)"
                            ToolTip="Run simulation and show results in a dialog."
                            Margin="0,0,8,0"/>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding ViewBoldReportCommand}"
                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                            Content="View Report"
                            ToolTip="Run simulation and show results in the report viewer."
                            Margin="0,0,8,0"/>
                    <Button Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding StartPaymentRunCommand}"
                            IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                            Content="Start Payment Run"/>
                </StackPanel>
                </Grid>
            </materialDesign:Card>

            <!-- NEW: Enhanced Filters Section -->
            <materialDesign:Card Grid.Row="3" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/> <!-- Header -->
                        <RowDefinition Height="Auto"/> <!-- Basic Filters -->
                        <RowDefinition Height="Auto"/> <!-- Advanced Options Toggle -->
                        <RowDefinition Height="Auto"/> <!-- Advanced Options (Collapsible) -->
                    </Grid.RowDefinitions>

                    <!-- Header with Advanced Options Toggle -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="Enhanced Filters" 
                                   Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        
                        <Button Grid.Column="1" Style="{StaticResource MaterialDesignFlatButton}"
                                Content="{Binding ShowAdvancedOptions, Converter={StaticResource BooleanToTextConverter}}"
                                Command="{Binding ToggleAdvancedOptionsCommand}">
                            <Button.ContentTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="ChevronDown" Width="16" Height="16"/>
                                        <TextBlock Text="{Binding}" Margin="4,0,0,0"/>
                                    </StackPanel>
                                </DataTemplate>
                            </Button.ContentTemplate>
                        </Button>
                    </Grid>

                    <!-- Basic Filters -->
                    <Grid Grid.Row="1" Margin="0,16,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Product Filter -->
                        <GroupBox Grid.Column="0" Header="Product IDs">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> <!-- Selection Summary -->
                                    <RowDefinition Height="Auto"/> <!-- Quick Actions -->
                                    <RowDefinition Height="Auto"/> <!-- Search -->
                                    <RowDefinition Height="*"/>    <!-- List -->
                                </Grid.RowDefinitions>
                                
                                <!-- Selection Summary -->
                                <TextBlock Grid.Row="0" Text="{Binding SelectedProductsSummary}" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Margin="0,0,0,4"/>
                                
                                <!-- Quick Actions -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,4">
                                    <Button Content="All" Command="{Binding SelectAllProductsCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2" Margin="0,0,4,0"/>
                                    <Button Content="Clear" Command="{Binding ClearAllProductsCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="2" Margin="0,0,0,4"
                                         materialDesign:HintAssist.Hint="Search..."
                                         Text="{Binding ProductSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                
                    <ListBox Grid.Row="3" MaxHeight="120" 
                             ItemsSource="{Binding ProductFilterItems}" 
                             IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ScrollViewer.CanContentScroll="True">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayText}" 
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="4,2"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>

                        <!-- Process Filter -->
                        <GroupBox Grid.Column="2" Header="Process IDs">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> <!-- Selection Summary -->
                                    <RowDefinition Height="Auto"/> <!-- Quick Actions -->
                                    <RowDefinition Height="Auto"/> <!-- Search -->
                                    <RowDefinition Height="*"/>    <!-- List -->
                                </Grid.RowDefinitions>
                                
                                <!-- Selection Summary -->
                                <TextBlock Grid.Row="0" Text="{Binding SelectedProcessesSummary}" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Margin="0,0,0,4"/>
                                
                                <!-- Quick Actions -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,4">
                                    <Button Content="All" Command="{Binding SelectAllProcessesCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2" Margin="0,0,4,0"/>
                                    <Button Content="Clear" Command="{Binding ClearAllProcessesCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="2" Margin="0,0,0,4"
                                         materialDesign:HintAssist.Hint="Search..."
                                         Text="{Binding ProcessSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                
                    <ListBox Grid.Row="3" MaxHeight="120" 
                             ItemsSource="{Binding ProcessFilterItems}" 
                             IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ScrollViewer.CanContentScroll="True">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayText}" 
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="4,2"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>

                        <!-- Grower Filter -->
                        <GroupBox Grid.Column="4" Header="Growers">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> <!-- Selection Summary -->
                                    <RowDefinition Height="Auto"/> <!-- Quick Actions -->
                                    <RowDefinition Height="Auto"/> <!-- Search -->
                                    <RowDefinition Height="*"/>    <!-- List -->
                                </Grid.RowDefinitions>
                                
                                <!-- Selection Summary -->
                                <TextBlock Grid.Row="0" Text="{Binding SelectedGrowersSummary}" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Margin="0,0,0,4"/>
                                
                                <!-- Quick Actions -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,4">
                                    <Button Content="All" Command="{Binding SelectAllGrowersCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2" Margin="0,0,4,0"/>
                                    <Button Content="Clear" Command="{Binding ClearAllGrowersCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="2" Margin="0,0,0,4"
                                         materialDesign:HintAssist.Hint="Search..."
                                         Text="{Binding GrowerSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                
                                <ListBox Grid.Row="3" MaxHeight="120" 
                                         ItemsSource="{Binding FilteredGrowerFilterItems}" 
                                         IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         ScrollViewer.CanContentScroll="True">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayText}" 
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="4,2"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>

                        <!-- Pay Group Filter -->
                        <GroupBox Grid.Column="6" Header="Pay Groups">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/> <!-- Selection Summary -->
                                    <RowDefinition Height="Auto"/> <!-- Quick Actions -->
                                    <RowDefinition Height="Auto"/> <!-- Search -->
                                    <RowDefinition Height="*"/>    <!-- List -->
                                </Grid.RowDefinitions>
                                
                                <!-- Selection Summary -->
                                <TextBlock Grid.Row="0" Text="{Binding SelectedPayGroupsSummary}" 
                                           Style="{StaticResource MaterialDesignCaptionTextBlock}"
                                           Margin="0,0,0,4"/>
                                
                                <!-- Quick Actions -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,4">
                                    <Button Content="All" Command="{Binding SelectAllPayGroupsCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2" Margin="0,0,4,0"/>
                                    <Button Content="Clear" Command="{Binding ClearAllPayGroupsCommand}" 
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,2"/>
                                </StackPanel>
                                
                                <TextBox Grid.Row="2" Margin="0,0,0,4"
                                         materialDesign:HintAssist.Hint="Search..."
                                         Text="{Binding PayGroupSearchText, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                
                                <ListBox Grid.Row="3" MaxHeight="120" 
                                         ItemsSource="{Binding FilteredPayGroupFilterItems}"
                                         IsEnabled="{Binding IsRunning, Converter={StaticResource InverseBooleanConverter}}"
                                         VirtualizingPanel.IsVirtualizing="True"
                                         VirtualizingPanel.VirtualizationMode="Recycling"
                                         ScrollViewer.CanContentScroll="True">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox Content="{Binding DisplayText}" 
                                                      IsChecked="{Binding IsSelected}"
                                                      Margin="4,2"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <!-- Advanced Options (Collapsible) -->
                    <Grid Grid.Row="3" Margin="0,16,0,0">
                        <Grid.Style>
                            <Style TargetType="Grid">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ShowAdvancedOptions}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Grid.Style>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Process Class Filter -->
                        <GroupBox Grid.Column="0" Header="Process Classes">
                            <StackPanel>
                                <CheckBox Content="Fresh" IsChecked="{Binding IncludeFresh}" Margin="0,4"/>
                                <CheckBox Content="Processed" IsChecked="{Binding IncludeProcessed}" Margin="0,4"/>
                                <CheckBox Content="Juice" IsChecked="{Binding IncludeJuice}" Margin="0,4"/>
                                <CheckBox Content="Other" IsChecked="{Binding IncludeOther}" Margin="0,4"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Grade Filter -->
                        <GroupBox Grid.Column="2" Header="Grades">
                            <StackPanel>
                                <CheckBox Content="Grade 1" IsChecked="{Binding IncludeGrade1}" Margin="0,4"/>
                                <CheckBox Content="Grade 2" IsChecked="{Binding IncludeGrade2}" Margin="0,4"/>
                                <CheckBox Content="Grade 3" IsChecked="{Binding IncludeGrade3}" Margin="0,4"/>
                                <CheckBox Content="Other Grade" IsChecked="{Binding IncludeOtherGrade}" Margin="0,4"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- Additional Options -->
                        <GroupBox Grid.Column="4" Header="Additional Options">
                            <StackPanel>
                                <TextBox Margin="0,4"
                                         materialDesign:HintAssist.Hint="Minimum Weight"
                                         Text="{Binding MinimumWeight}"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                
                                <CheckBox Content="Show Unpayable Receipts" 
                                          IsChecked="{Binding ShowUnpayableReceipts}" 
                                          Margin="0,8,0,4"/>
                                
                                <CheckBox Content="Include Previously Paid" 
                                          IsChecked="{Binding IncludePreviouslyPaid}" 
                                          Margin="0,4"/>
                            </StackPanel>
                        </GroupBox>
                    </Grid>
                </Grid>
            </materialDesign:Card>

            <!-- NEW: Preview Summary Card -->
            <materialDesign:Card Grid.Row="4" Padding="16" Margin="0,0,0,16">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Payment Preview" Style="{StaticResource MaterialDesignSubtitle1TextBlock}"/>
                        <TextBlock Text="{Binding PreviewSummaryText}" 
                                   Style="{StaticResource MaterialDesignBody2TextBlock}"
                                   Margin="0,8,0,0"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Style="{StaticResource MaterialDesignRaisedButton}"
                            Command="{Binding PreviewCountCommand}"
                            Content="Refresh Preview"
                            VerticalAlignment="Top"/>
            </Grid>
        </materialDesign:Card>

        <!-- Combined On Hold Growers & Run Log Section -->
        <Grid Grid.Row="5" Margin="0,0,0,16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <!-- On Hold Growers Section -->
            <GroupBox Grid.Column="0" Header="Growers Currently On Hold" 
                      Style="{StaticResource MaterialDesignCardGroupBox}">
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <ListView ItemsSource="{Binding OnHoldGrowers}" MinHeight="100">
                         <ListView.View>
                             <GridView>
                                <GridViewColumn Header="Number" DisplayMemberBinding="{Binding GrowerNumber}" Width="100"/>
                            <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}" Width="250"/>
                             </GridView>
                         </ListView.View>
                     </ListView>
                 </ScrollViewer>
            </GroupBox>

            <!-- Run Log Section -->
            <GroupBox Grid.Column="2" Header="Run Log" Style="{StaticResource MaterialDesignCardGroupBox}">
                <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="RunLogListBox" 
                             ItemsSource="{Binding RunLog}" 
                             SelectionMode="Extended"
                             ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                             ScrollViewer.VerticalScrollBarVisibility="Auto"
                             SelectionChanged="RunLogListBox_SelectionChanged"
                             VirtualizingPanel.IsVirtualizing="True"
                             VirtualizingPanel.VirtualizationMode="Recycling"
                             ScrollViewer.CanContentScroll="True">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" Margin="4"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        
                        <!-- Context Menu -->
                        <ListBox.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Copy Selected" 
                                          Command="{Binding CopySelectedRunLogCommand}"
                                          ToolTip="Copy selected log entries to clipboard">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Copy All" 
                                          Command="{Binding CopyRunLogCommand}"
                                          ToolTip="Copy all log entries to clipboard">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="ContentCopy" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Select All" 
                                          Command="ApplicationCommands.SelectAll"
                                          ToolTip="Select all log entries">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="SelectAll" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem Header="Clear Selection" 
                                          Command="{Binding ClearRunLogSelectionCommand}"
                                          ToolTip="Clear current selection">
                                    <MenuItem.Icon>
                                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        
                        <!-- Keyboard Input Bindings -->
                        <ListBox.InputBindings>
                            <KeyBinding Key="A" Modifiers="Ctrl" Command="ApplicationCommands.SelectAll"/>
                            <KeyBinding Key="C" Modifiers="Ctrl" Command="{Binding CopySelectedRunLogCommand}"/>
                        </ListBox.InputBindings>
                    </ListBox>
                </ScrollViewer>
            </GroupBox>
        </Grid>

            <!-- Status Bar -->
            <StatusBar Grid.Row="6" Margin="0,16,0,0">
            <StatusBarItem>
                    <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
             <StatusBarItem HorizontalAlignment="Right">
                    <StackPanel Orientation="Horizontal">
                        <ProgressBar Width="100" Height="16" Margin="0,0,8,0"
                                     IsIndeterminate="{Binding IsRunning}"
                                     Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                        <TextBlock Text="{Binding IsRunning, Converter={StaticResource BooleanToTextConverter}, ConverterParameter=Running|Ready}"/>
                    </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
    </ScrollViewer>
</UserControl>