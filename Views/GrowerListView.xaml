<UserControl x:Class="WPFGrowerApp.Views.GrowerListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:WPFGrowerApp.Converters"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=vm:GrowerListViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{DynamicResource MaterialDesignPaper}"
             Focusable="True"
             x:Name="growerListView">
    
    <UserControl.InputBindings>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
            <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converters:NotNullConverter x:Key="NotNullConverter"/>
            <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Row 0: Title -->
            <RowDefinition Height="Auto"/> <!-- Row 1: Search/Filter Bar -->
            <RowDefinition Height="Auto"/> <!-- Row 2: Statistics -->
            <RowDefinition Height="Auto"/> <!-- Row 3: Main Content (DataGrid) -->
            <RowDefinition Height="Auto"/> <!-- Row 4: Status Bar -->
        </Grid.RowDefinitions>

        <!-- View Title -->
        <TextBlock Grid.Row="0" 
                   Text="Grower Management" 
                   Style="{StaticResource StandardizedViewTitleStyle}"/>

        <!-- Search & Filter Bar -->
        <materialDesign:Card Grid.Row="1" Style="{StaticResource FiltersActionsPanelStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/> <!-- Search Row -->
                    <RowDefinition Height="Auto"/> <!-- Filters Row -->
                </Grid.RowDefinitions>

                <!-- Search Row -->
                <Grid Grid.Row="0" Style="{StaticResource SearchRowStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="400"/> <!-- Reduced width for search -->
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/> <!-- Fill remaining space -->
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             materialDesign:HintAssist.Hint="Search growers by name, number, city, or phone..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             Margin="0,0,10,0">
                        <TextBox.InputBindings>
                            <KeyBinding Key="Enter" Command="{Binding SearchCommand}"/>
                        </TextBox.InputBindings>
                    </TextBox>
                    
                    <Button Grid.Column="1"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="100"
                            Margin="0,0,10,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Magnify" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Search"/>
                        </StackPanel>
                    </Button>
                    
                    <Button Grid.Column="2"
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="100"
                            Margin="0,0,10,0">
                        <TextBlock Text="Clear"/>
                    </Button>
                    
                    <!--<Button Grid.Column="3"
                            Command="{Binding RefreshCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Width="100"
                            Margin="0,0,10,0"
                            ToolTip="Refresh">
                        <materialDesign:PackIcon Kind="Refresh" Width="16" Height="16"/>
                    </Button>-->
                    
                    <Button Grid.Column="3"
                            Command="{Binding AddNewGrowerCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Width="120">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Plus" Width="16" Height="16" Margin="0,0,5,0"/>
                            <TextBlock Text="Add New"/>
                        </StackPanel>
                    </Button>
                    <Button Grid.Column="4"
                        Command="{Binding RefreshCommand}"
                        Style="{StaticResource MaterialDesignIconButton}"
                        ToolTip="Refresh (F5)"
                        Width="40"
                        Margin="0,0,5,0">
                        <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                    </Button>
                </Grid>

                <!-- Filters Row -->
                <Grid Grid.Row="1" Style="{StaticResource FiltersRowStyle}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" Text="Province:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="1"
                              ItemsSource="{Binding ProvinceOptions}"
                              SelectedItem="{Binding SelectedProvince}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="2" Text="Payment Group:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="3"
                              ItemsSource="{Binding PaymentGroupOptions}"
                              SelectedItem="{Binding SelectedPaymentGroup}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,10,0"/>
                    
                    <TextBlock Grid.Column="4" Text="Status:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    
                    <ComboBox Grid.Column="5"
                              ItemsSource="{Binding StatusOptions}"
                              SelectedItem="{Binding SelectedStatus}"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Margin="0,0,10,0"/>
                </Grid>
            </Grid>
        </materialDesign:Card>

        <!-- Grower Statistics -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,10" Background="{DynamicResource PrimaryHueLightBrush}">
            <Grid Margin="15">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountGroup" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding TotalGrowers, StringFormat='{}{0:N0} Growers'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                              Margin="0,0,20,0"/>
                    
                    <materialDesign:PackIcon Kind="AccountCheck" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding ActiveGrowers, StringFormat='{}{0:N0} Active'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"
                              Margin="0,0,20,0"/>
                    
                    <materialDesign:PackIcon Kind="AccountAlert" 
                                           Width="20" Height="20" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,8,0"
                                           Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                    <TextBlock Text="{Binding OnHoldGrowers, StringFormat='{}{0:N0} On Hold'}" 
                              FontWeight="SemiBold"
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource PrimaryHueLightForegroundBrush}"/>
                </StackPanel>
            </Grid>
        </materialDesign:Card>

        <!-- Main Content Area -->
        <materialDesign:Card Grid.Row="3" Style="{StaticResource MainContentAreaStyle}" Margin="0,5,0,0">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <materialDesign:PackIcon Kind="Loading" 
                                            Width="40" 
                                            Height="40" 
                                            Margin="0,0,0,10"
                                            Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                    <TextBlock Text="Loading growers..." 
                              HorizontalAlignment="Center"
                              Style="{StaticResource MaterialDesignBody2TextBlock}"/>
                </StackPanel>

                <!-- Growers DataGrid -->
                <DataGrid x:Name="GrowersDataGrid"
                          ItemsSource="{Binding FilteredGrowers}"
                          SelectedItem="{Binding SelectedGrower, Mode=TwoWay}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserSortColumns="True"
                          SelectionMode="Single"
                          MinHeight="200"
                          MaxHeight="400"
                          VerticalScrollBarVisibility="Auto"
                          materialDesign:DataGridAssist.CellPadding="13 8 8 8"
                          materialDesign:DataGridAssist.ColumnHeaderPadding="13 10 8 10"
                          MouseDoubleClick="GrowersDataGrid_MouseDoubleClick">
                    
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" 
                                          Binding="{Binding GrowerNumber, TargetNullValue='', FallbackValue=''}" 
                                          Width="60"
                                          SortDirection="Ascending"/>
                        <DataGridTextColumn Header="Name" 
                                          Binding="{Binding GrowerName, TargetNullValue='', FallbackValue=''}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Cheque Name" 
                                          Binding="{Binding ChequeName, TargetNullValue='', FallbackValue=''}" 
                                          Width="100"/>
                        <DataGridTextColumn Header="City" 
                                          Binding="{Binding City, TargetNullValue='', FallbackValue=''}" 
                                          Width="120"/>
                        <DataGridTextColumn Header="Province" 
                                          Binding="{Binding Province, TargetNullValue='', FallbackValue=''}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Phone" 
                                          Binding="{Binding Phone, TargetNullValue='', FallbackValue=''}" 
                                          Width="150"/>
                        <DataGridTextColumn Header="Email" 
                                          Binding="{Binding Email, TargetNullValue='', FallbackValue=''}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Payment Group" 
                                          Binding="{Binding PaymentGroupCode, TargetNullValue='', FallbackValue=''}" 
                                          Width="120"/>
                        <DataGridTemplateColumn Header="Status" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}"
                                            Style="{StaticResource StatusBadgeStyle}">
                                        <TextBlock Text="{Binding Status, TargetNullValue='', FallbackValue=''}" 
                                                   Foreground="White"
                                                   FontSize="11"
                                                   FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        
                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="5" HorizontalAlignment="Left">
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="30" Height="30"
                                                ToolTip="View Grower"
                                                Click="ViewGrower_Click"
                                                Tag="{Binding}">
                                            <materialDesign:PackIcon Kind="Eye" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="30" Height="30"
                                                ToolTip="Edit Grower"
                                                Click="EditGrower_Click"
                                                Tag="{Binding}">
                                            <materialDesign:PackIcon Kind="Pencil" Width="16" Height="16"/>
                                        </Button>
                                        <Button Style="{StaticResource MaterialDesignIconButton}"
                                                Width="30" Height="30"
                                                ToolTip="Delete Grower"
                                                Click="DeleteGrower_Click"
                                                Tag="{Binding}"
                                                Foreground="IndianRed">
                                            <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="View Details" 
                                    Command="{Binding ViewGrowerCommand}"
                                    Icon="{materialDesign:PackIcon Kind=Eye}"/>
                            <MenuItem Header="Edit" 
                                    Command="{Binding EditGrowerCommand}"
                                    Icon="{materialDesign:PackIcon Kind=Pencil}"/>
                            <Separator/>
                            <MenuItem Header="Delete" 
                                    Command="{Binding DeleteGrowerCommand}"
                                    Icon="{materialDesign:PackIcon Kind=Delete}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
            </Grid>
        </materialDesign:Card>

        <!-- Status Bar -->
        <materialDesign:ColorZone Grid.Row="4" Style="{StaticResource StatusFooterBarStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Status: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding StatusMessage}"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Showing: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding RecordCount}"/>
                    <TextBlock Text=" / " Margin="5,0"/>
                    <TextBlock Text="{Binding TotalGrowers}"/>
                    <TextBlock Text=" | " Margin="5,0"/>
                    <TextBlock Text="Last Updated: " FontWeight="SemiBold"/>
                    <TextBlock Text="{Binding LastUpdated}"/>
                </StackPanel>
            </Grid>
        </materialDesign:ColorZone>

    </Grid>
</UserControl>
