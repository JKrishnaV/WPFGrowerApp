<UserControl x:Class="WPFGrowerApp.Views.ChequeDeliveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200"
             Focusable="True">
    
    <UserControl.InputBindings>
        <KeyBinding Key="F1" Command="{Binding ShowHelpCommand}"/>
        <KeyBinding Key="F5" Command="{Binding RefreshCommand}"/>
    </UserControl.InputBindings>
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesign2.Defaults.xaml" />
                <ResourceDictionary Source="/Styles/StandardizedViewTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Breadcrumb -->
            <RowDefinition Height="Auto"/> <!-- Header -->
            <RowDefinition Height="Auto"/> <!-- Search/Filter Bar -->
            <RowDefinition Height="Auto"/> <!-- Statistics Cards -->
            <RowDefinition Height="*"/> <!-- Main Content -->
            <RowDefinition Height="Auto"/> <!-- Status Bar -->
        </Grid.RowDefinitions>

        <!-- Breadcrumb Navigation -->
        <materialDesign:ColorZone Grid.Row="0" Style="{StaticResource BreadcrumbNavigationStyle}">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0"
                        Command="{Binding NavigateToDashboardCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Home" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Dashboard" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <Button Style="{StaticResource MaterialDesignFlatButton}"
                        Padding="5,0"
                        Command="{Binding NavigateToPaymentManagementCommand}">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="CreditCard" Width="16" Height="16" 
                                               VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBlock Text="Payment Management" FontSize="12"/>
                    </StackPanel>
                </Button>
                <materialDesign:PackIcon Kind="ChevronRight" Width="16" Height="16" 
                                       VerticalAlignment="Center" Margin="5,0"/>
                <TextBlock Text="Cheque Delivery" FontSize="12" VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:ColorZone>

        <!-- Header -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="TruckDeliveryOutline" Width="32" Height="32" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBlock Text="Cheque Delivery" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
            <Border Background="{DynamicResource MaterialDesignChipBackground}" 
                    CornerRadius="16" 
                    Padding="8,4" 
                    Margin="20,0,0,0">
                <TextBlock Text="{Binding Cheques.Count, StringFormat='{}{0} Ready for Delivery'}" 
                           FontSize="12" 
                           FontWeight="Medium"/>
            </Border>
            <Button Style="{StaticResource MaterialDesignToolButton}"
                    Command="{Binding ShowHelpCommand}"
                    Margin="20,0,0,0"
                    ToolTip="Help (F1)">
                <materialDesign:PackIcon Kind="HelpCircleOutline" Width="24" Height="24"/>
            </Button>
        </StackPanel>

        <!-- Search/Filter Bar -->
        <materialDesign:Card Grid.Row="2" Margin="0,0,0,10" Padding="15">
            <StackPanel Orientation="Horizontal">
                <TextBox materialDesign:HintAssist.Hint="Cheque #"
                         Width="150"
                         Margin="0,0,10,0"/>
                <TextBox materialDesign:HintAssist.Hint="Grower #"
                         Width="150"
                         Margin="0,0,10,0"/>
                <ComboBox materialDesign:HintAssist.Hint="Delivery Method"
                          Width="150"
                          Margin="0,0,10,0">
                    <ComboBoxItem Content="Mail"/>
                    <ComboBoxItem Content="Pickup"/>
                    <ComboBoxItem Content="Courier"/>
                </ComboBox>
                <Button Content="Search" 
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,5,0"/>
                <Button Content="Clear" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Margin="0,0,10,0"/>
                <Button Style="{StaticResource MaterialDesignToolButton}"
                        Command="{Binding RefreshCommand}"
                        ToolTip="Refresh (F5)">
                    <materialDesign:PackIcon Kind="Refresh" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </materialDesign:Card>

        <!-- Statistics Cards -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <materialDesign:Card Grid.Column="0" Margin="0,0,5,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Ready Count" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{Binding Cheques.Count}" 
                               FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>
            
            <materialDesign:Card Grid.Column="1" Margin="5,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Total Amount" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="{Binding TotalAmount, StringFormat=C}" 
                               FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>
            
            <materialDesign:Card Grid.Column="2" Margin="5,0,0,0" Padding="15">
                <StackPanel>
                    <TextBlock Text="Delivered Today" FontSize="12" Opacity="0.7"/>
                    <TextBlock Text="0" 
                               FontSize="18" FontWeight="Bold"/>
                </StackPanel>
            </materialDesign:Card>
        </Grid>

        <!-- Controls -->
        <GroupBox Grid.Row="4" Header="Delivery Controls" Margin="0,0,0,20">
            <StackPanel Margin="20" Orientation="Horizontal">
                <Button Content="Select All" 
                        Command="{Binding SelectAllCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,10,0"/>
                <Button Content="Clear Selection" 
                        Command="{Binding ClearSelectionCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Margin="0,0,10,0"/>
                <Button Content="Record Delivery" 
                        Command="{Binding RecordDeliveryCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource MaterialDesignValidationSuccessBrush}"
                        Margin="0,0,10,0"/>
                <Button Content="Emergency Reprint" 
                        Command="{Binding EmergencyReprintCommand}"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Background="{DynamicResource MaterialDesignWarningBrush}"
                        Margin="0,0,10,0"/>
            </StackPanel>
        </GroupBox>

        <!-- Cheques List -->
        <GroupBox Grid.Row="4" Header="Cheques Ready for Delivery">
            <DataGrid ItemsSource="{Binding Cheques}" 
                      AutoGenerateColumns="False" 
                      CanUserAddRows="False" 
                      CanUserDeleteRows="False"
                      GridLinesVisibility="Horizontal"
                      HeadersVisibility="Column"
                      Margin="10"
                      SelectionMode="Extended">
                <DataGrid.Columns>
                    <DataGridCheckBoxColumn Header="Select" 
                                            Binding="{Binding IsSelected}" 
                                            Width="60"/>
                    <DataGridTextColumn Header="Cheque #" 
                                        Binding="{Binding ChequeNumber}" 
                                        Width="150"/>
                    <DataGridTextColumn Header="Grower" 
                                        Binding="{Binding GrowerName}" 
                                        Width="200"/>
                    <DataGridTextColumn Header="Amount" 
                                        Binding="{Binding ChequeAmount, StringFormat=C}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="Date" 
                                        Binding="{Binding ChequeDate, StringFormat='MMM dd, yyyy'}" 
                                        Width="120"/>
                    <DataGridTextColumn Header="Status" 
                                        Binding="{Binding Status}" 
                                        Width="100"/>
                    <DataGridTextColumn Header="Printed Date" 
                                        Binding="{Binding PrintedDate, StringFormat='MMM dd, yyyy'}" 
                                        Width="120"/>
                    <DataGridTemplateColumn Header="Actions" Width="120">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Content="Deliver" 
                                            Command="{Binding DataContext.RecordSingleDeliveryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Background="{DynamicResource MaterialDesignValidationSuccessBrush}"
                                            Foreground="White"
                                            Padding="4,2"
                                            FontSize="10"
                                            Margin="0,0,2,0"/>
                                    <Button Content="Emergency" 
                                            Command="{Binding DataContext.EmergencyReprintCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            CommandParameter="{Binding}"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Background="{DynamicResource MaterialDesignWarningBrush}"
                                            Foreground="White"
                                            Padding="4,2"
                                            FontSize="10"
                                            Margin="2,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Status Bar -->
        <materialDesign:Card Grid.Row="5" Margin="0,10,0,0" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <ProgressBar IsIndeterminate="{Binding IsLoading}"
                             Width="200"
                             Height="4"
                             Margin="0,0,10,0"
                             Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="12"
                           VerticalAlignment="Center"/>
            </StackPanel>
        </materialDesign:Card>
    </Grid>
</UserControl>
