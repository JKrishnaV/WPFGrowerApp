<UserControl x:Class="WPFGrowerApp.Views.DashboardAnalyticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFGrowerApp.Views"
             xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
             xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200">
    
    <UserControl.Resources>
        <!-- Modern Color Scheme -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#2E86AB"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#A23B72"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#F18F01"/>
        <SolidColorBrush x:Key="SuccessBrush" Color="#C73E1D"/>
        <SolidColorBrush x:Key="BackgroundBrush" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="CardBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextBrush" Color="#212529"/>
        <SolidColorBrush x:Key="LightTextBrush" Color="#6C757D"/>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Section Header Style -->
        <Style x:Key="SectionHeaderStyle" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
        
        <!-- Toggle Button Style -->
        <Style x:Key="ToggleButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E9ECEF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBrush}"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="MinWidth" Value="200"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.05" ShadowDepth="1" BlurRadius="4"/>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Dashboard Analytics" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock Text="Comprehensive insights into your grower operations" 
                               FontSize="14" 
                               Foreground="White" 
                               Opacity="0.9"/>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Refresh Data" 
                            Command="{Binding RefreshDataCommand}"
                            Background="{StaticResource AccentBrush}"
                            Foreground="White"
                            Padding="15,8"
                            Margin="5"
                            BorderThickness="0"
                            CornerRadius="4"
                            Cursor="Hand"/>
                    <Button Content="Export Dashboard" 
                            Command="{Binding ExportDashboardCommand}"
                            Background="{StaticResource SecondaryBrush}"
                            Foreground="White"
                            Padding="15,8"
                            Margin="5"
                            BorderThickness="0"
                            CornerRadius="4"
                            Cursor="Hand"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="1" Background="White" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                    <TextBlock Text="Date Range" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker Grid.Column="0" SelectedDate="{Binding StartDate}" Margin="0,0,5,0"/>
                        <TextBlock Grid.Column="1" Text="to" VerticalAlignment="Center" Margin="5,0"/>
                        <DatePicker Grid.Column="2" SelectedDate="{Binding EndDate}" Margin="5,0,0,0"/>
                    </Grid>
                </StackPanel>
                
                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                    <TextBlock Text="Province" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SelectedProvince}" 
                              ItemsSource="{Binding ProvinceOptions}"
                              Padding="8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                    <TextBlock Text="Price Level" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SelectedPriceLevel}" 
                              ItemsSource="{Binding PriceLevelOptions}"
                              Padding="8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="3" Margin="0,0,10,0">
                    <TextBlock Text="Export Format" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ComboBox SelectedItem="{Binding SelectedExportFormat}" 
                              ItemsSource="{Binding ExportFormatOptions}"
                              Padding="8"/>
                </StackPanel>
                
                <StackPanel Grid.Column="4" VerticalAlignment="Bottom">
                    <CheckBox Content="Include On-Hold Growers" 
                              IsChecked="{Binding IncludeOnHoldGrowers}"
                              VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="10">
            <StackPanel>
                
                <!-- Financial Summary Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Style="{StaticResource SectionHeaderStyle}">
                            <TextBlock Text="Financial Summary" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                            <Button Content="âˆ’" 
                                    Style="{StaticResource ToggleButtonStyle}"
                                    Command="{Binding ToggleSectionCommand}"
                                    CommandParameter="FinancialSummary"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <Grid Visibility="{Binding ShowFinancialSummary, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Total Growers" 
                                               FontSize="12" 
                                               Foreground="{StaticResource LightTextBrush}"/>
                                    <TextBlock Text="{Binding DashboardSummary.TotalGrowers}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Active Growers" 
                                               FontSize="12" 
                                               Foreground="{StaticResource LightTextBrush}"/>
                                    <TextBlock Text="{Binding DashboardSummary.ActiveGrowers}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource SuccessBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="2" Style="{StaticResource MetricCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Total Payments" 
                                               FontSize="12" 
                                               Foreground="{StaticResource LightTextBrush}"/>
                                    <TextBlock Text="{Binding DashboardSummary.TotalPayments}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource SecondaryBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="3" Style="{StaticResource MetricCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Total Amount" 
                                               FontSize="12" 
                                               Foreground="{StaticResource LightTextBrush}"/>
                                    <TextBlock Text="{Binding DashboardSummary.TotalPaymentAmountFormatted}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource AccentBrush}"/>
                                </StackPanel>
                            </Border>
                            
                            <Border Grid.Column="4" Style="{StaticResource MetricCardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Completion Rate" 
                                               FontSize="12" 
                                               Foreground="{StaticResource LightTextBrush}"/>
                                    <TextBlock Text="{Binding DashboardSummary.CompletionRate, StringFormat={}{0:F1}%}" 
                                               FontSize="24" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource PrimaryBrush}"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Payment Trends Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Style="{StaticResource SectionHeaderStyle}">
                            <TextBlock Text="Payment Trends" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                            <Button Content="âˆ’" 
                                    Style="{StaticResource ToggleButtonStyle}"
                                    Command="{Binding ToggleSectionCommand}"
                                    CommandParameter="PaymentTrends"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <Grid Visibility="{Binding ShowPaymentTrends, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Monthly Trend Chart -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Monthly Payment Trend" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"/>
                                    <syncfusion:SfChart Height="300">
                                        <syncfusion:SfChart.PrimaryAxis>
                                            <syncfusion:CategoryAxis/>
                                        </syncfusion:SfChart.PrimaryAxis>
                                        <syncfusion:SfChart.SecondaryAxis>
                                            <syncfusion:NumericalAxis/>
                                        </syncfusion:SfChart.SecondaryAxis>
                                        <syncfusion:ColumnSeries ItemsSource="{Binding MonthlyPaymentTrend}" 
                                                                 XBindingPath="Category" 
                                                                 YBindingPath="Value"/>
                                    </syncfusion:SfChart>
                                </StackPanel>
                            </Border>
                            
                            <!-- Payment Method Distribution -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Payment Methods" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"/>
                                    <syncfusion:SfChart Height="300">
                                        <syncfusion:SfChart.PrimaryAxis>
                                            <syncfusion:CategoryAxis/>
                                        </syncfusion:SfChart.PrimaryAxis>
                                        <syncfusion:SfChart.SecondaryAxis>
                                            <syncfusion:NumericalAxis/>
                                        </syncfusion:SfChart.SecondaryAxis>
                                        <syncfusion:PieSeries ItemsSource="{Binding PaymentMethodDistribution}" 
                                                              XBindingPath="Category" 
                                                              YBindingPath="Value"/>
                                    </syncfusion:SfChart>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Grower Analytics Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Style="{StaticResource SectionHeaderStyle}">
                            <TextBlock Text="Grower Analytics" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                            <Button Content="âˆ’" 
                                    Style="{StaticResource ToggleButtonStyle}"
                                    Command="{Binding ToggleSectionCommand}"
                                    CommandParameter="GrowerAnalytics"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <Grid Visibility="{Binding ShowGrowerAnalytics, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Top Grower Performance -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Top Grower Performance" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"/>
                                    <syncfusion:SfChart Height="300">
                                        <syncfusion:SfChart.PrimaryAxis>
                                            <syncfusion:CategoryAxis/>
                                        </syncfusion:SfChart.PrimaryAxis>
                                        <syncfusion:SfChart.SecondaryAxis>
                                            <syncfusion:NumericalAxis/>
                                        </syncfusion:SfChart.SecondaryAxis>
                                        <syncfusion:BarSeries ItemsSource="{Binding GrowerPerformanceData}" 
                                                              XBindingPath="Category" 
                                                              YBindingPath="Value"/>
                                    </syncfusion:SfChart>
                                </StackPanel>
                            </Border>
                            
                            <!-- Province Distribution -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Province Distribution" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"/>
                                    <syncfusion:SfChart Height="300">
                                        <syncfusion:SfChart.PrimaryAxis>
                                            <syncfusion:CategoryAxis/>
                                        </syncfusion:SfChart.PrimaryAxis>
                                        <syncfusion:SfChart.SecondaryAxis>
                                            <syncfusion:NumericalAxis/>
                                        </syncfusion:SfChart.SecondaryAxis>
                                        <syncfusion:PieSeries ItemsSource="{Binding ProvinceDistribution}" 
                                                              XBindingPath="Category" 
                                                              YBindingPath="Value"/>
                                    </syncfusion:SfChart>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Distribution Charts Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Style="{StaticResource SectionHeaderStyle}">
                            <TextBlock Text="Distribution Analysis" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                            <Button Content="âˆ’" 
                                    Style="{StaticResource ToggleButtonStyle}"
                                    Command="{Binding ToggleSectionCommand}"
                                    CommandParameter="DistributionCharts"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <Grid Visibility="{Binding ShowDistributionCharts, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Price Level Distribution -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,10,0">
                                <StackPanel>
                                    <TextBlock Text="Price Level Distribution" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"/>
                                    <syncfusion:SfChart Height="300">
                                        <syncfusion:SfChart.PrimaryAxis>
                                            <syncfusion:CategoryAxis/>
                                        </syncfusion:SfChart.PrimaryAxis>
                                        <syncfusion:SfChart.SecondaryAxis>
                                            <syncfusion:NumericalAxis/>
                                        </syncfusion:SfChart.SecondaryAxis>
                                        <syncfusion:ColumnSeries ItemsSource="{Binding PriceLevelDistribution}" 
                                                                 XBindingPath="Category" 
                                                                 YBindingPath="Value"/>
                                    </syncfusion:SfChart>
                                </StackPanel>
                            </Border>
                            
                            <!-- Additional Distribution Chart Placeholder -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <StackPanel>
                                    <TextBlock Text="Additional Metrics" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,15"/>
                                    <TextBlock Text="More distribution charts can be added here based on your specific needs." 
                                               FontSize="14" 
                                               Foreground="{StaticResource LightTextBrush}" 
                                               TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Recent Activity Section -->
                <Border Style="{StaticResource CardStyle}">
                    <StackPanel>
                        <StackPanel Style="{StaticResource SectionHeaderStyle}">
                            <TextBlock Text="Recent Activity" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextBrush}"/>
                            <Button Content="âˆ’" 
                                    Style="{StaticResource ToggleButtonStyle}"
                                    Command="{Binding ToggleSectionCommand}"
                                    CommandParameter="RecentActivity"
                                    FontSize="16"
                                    FontWeight="Bold"
                                    Margin="10,0,0,0"/>
                        </StackPanel>
                        
                        <Grid Visibility="{Binding ShowRecentActivity, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <DataGrid ItemsSource="{Binding RecentPayments}" 
                                      AutoGenerateColumns="False" 
                                      CanUserAddRows="False" 
                                      CanUserDeleteRows="False" 
                                      IsReadOnly="True"
                                      GridLinesVisibility="Horizontal"
                                      HeadersVisibility="Column"
                                      AlternatingRowBackground="#F8F9FA">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Date" 
                                                        Binding="{Binding PaymentDate, StringFormat={}{0:MMM dd, yyyy}}" 
                                                        Width="120"/>
                                    <DataGridTextColumn Header="Grower ID" 
                                                        Binding="{Binding GrowerId}" 
                                                        Width="100"/>
                                    <DataGridTextColumn Header="Amount" 
                                                        Binding="{Binding Amount, StringFormat={}{0:C}}" 
                                                        Width="120"/>
                                    <DataGridTextColumn Header="Type" 
                                                        Binding="{Binding PaymentType}" 
                                                        Width="120"/>
                                    <DataGridTextColumn Header="Status" 
                                                        Binding="{Binding Status}" 
                                                        Width="100"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>