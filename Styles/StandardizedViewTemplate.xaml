<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- Note: Apply Background and Margin directly to the UserControl root element -->
    <!-- Background="{DynamicResource MaterialDesignPaper}" -->
    <!-- Grid Margin="10" for the main content grid -->

    <!-- Breadcrumb Navigation Style -->
    <Style x:Key="BreadcrumbNavigationStyle" TargetType="materialDesign:ColorZone">
        <Setter Property="Mode" Value="PrimaryLight"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- View Title Style -->
    <Style x:Key="StandardizedViewTitleStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline4TextBlock}">
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Filters/Actions Panel Style -->
    <Style x:Key="FiltersActionsPanelStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
    </Style>

    <!-- Main Content Area Style -->
    <Style x:Key="MainContentAreaStyle" TargetType="materialDesign:Card">
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Status/Footer Bar Style -->
    <Style x:Key="StatusFooterBarStyle" TargetType="materialDesign:ColorZone">
        <Setter Property="Mode" Value="PrimaryLight"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- Action Button Row Style -->
    <Style x:Key="ActionButtonRowStyle" TargetType="StackPanel">
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
    </Style>

    <!-- Search Row Style -->
    <Style x:Key="SearchRowStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>

    <!-- Filters Row Style -->
    <Style x:Key="FiltersRowStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,10"/>
    </Style>




    <!-- Primary Action Button Style -->
    <Style x:Key="PrimaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <!-- Secondary Action Button Style -->
    <Style x:Key="SecondaryActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <!-- Danger Action Button Style -->
    <Style x:Key="DangerActionButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
        <Setter Property="Background" Value="IndianRed"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <!-- Statistics Row Style -->
    <Style x:Key="StatisticsRowStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0,0,0,15"/>
    </Style>

    <!-- Statistics Card Style -->
    <Style x:Key="StatisticsCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="0,0,10,0"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
    </Style>

    <!-- Statistics Number Style -->
    <Style x:Key="StatisticsNumberStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline3TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}"/>
    </Style>

    <!-- Statistics Label Style -->
    <Style x:Key="StatisticsLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,5,0,0"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
    </Style>

    <!-- Statistics Sub Label Style -->
    <Style x:Key="StatisticsSubLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,2,0,0"/>
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        <Setter Property="FontSize" Value="10"/>
    </Style>

    <!-- Material Design Card GroupBox Style -->
    <Style x:Key="MaterialDesignCardGroupBox" TargetType="GroupBox">
        <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignDivider}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="Margin" Value="0,0,0,8"/>
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <materialDesign:Card materialDesign:ElevationAssist.Elevation="Dp1" 
                                         Background="{TemplateBinding Background}"
                                         Padding="{TemplateBinding Padding}"
                                         Margin="{TemplateBinding Margin}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                       Text="{TemplateBinding Header}" 
                                       Style="{StaticResource MaterialDesignSubtitle2TextBlock}"
                                       Margin="0,0,0,8"/>
                            <ContentPresenter Grid.Row="1" 
                                              Content="{TemplateBinding Content}"
                                              ContentTemplate="{TemplateBinding ContentTemplate}"/>
                        </Grid>
                    </materialDesign:Card>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- DataGrid Card Style -->
    <Style x:Key="DataGridCardStyle" TargetType="materialDesign:Card">
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

    <!-- Standardized DataGrid Style -->
    <Style x:Key="StandardizedDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource MaterialDesignDataGrid}">
        <Setter Property="AutoGenerateColumns" Value="False"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <Setter Property="CanUserReorderColumns" Value="True"/>
        <Setter Property="CanUserResizeColumns" Value="True"/>
        <Setter Property="CanUserSortColumns" Value="True"/>
        <Setter Property="GridLinesVisibility" Value="Horizontal"/>
        <Setter Property="HeadersVisibility" Value="Column"/>
        <Setter Property="SelectionMode" Value="Single"/>
        <Setter Property="SelectionUnit" Value="FullRow"/>
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource MaterialDesignDataGridAlternatingRowBackground}"/>
    </Style>

    <!-- Status Bar Color Zone Style -->
    <Style x:Key="StatusBarColorZoneStyle" TargetType="materialDesign:ColorZone">
        <Setter Property="Mode" Value="PrimaryLight"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="Margin" Value="0,10,0,0"/>
        <Setter Property="CornerRadius" Value="4"/>
    </Style>

    <!-- Status Bar Label Style -->
    <Style x:Key="StatusBarLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignCaptionTextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBodyLight}"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <!-- Status Bar Message Style -->
    <Style x:Key="StatusBarMessageStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignCaptionTextBlock}">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}"/>
        <Setter Property="Margin" Value="0,0,10,0"/>
    </Style>

    <!-- Title Bar Card Style -->
    <Style x:Key="TitleBarCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
    </Style>

    <!-- Field Label Style -->
    <Style x:Key="FieldLabelStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="Margin" Value="0,0,0,5"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Section Header Style -->
    <Style x:Key="SectionHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignHeadline6TextBlock}">
        <Setter Property="Margin" Value="0,0,0,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Body Text Style -->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock" BasedOn="{StaticResource MaterialDesignBody2TextBlock}">
        <Setter Property="TextWrapping" Value="Wrap"/>
    </Style>

    <!-- Status Badge Style -->
    <Style x:Key="StatusBadgeStyle" TargetType="Border">
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
    </Style>

    <!-- Loading Indicator Style -->
    <Style x:Key="LoadingIndicatorStyle" TargetType="materialDesign:Card">
        <Setter Property="Background" Value="{DynamicResource MaterialDesignPaper}"/>
        <Setter Property="Opacity" Value="0.9"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Padding" Value="20"/>
    </Style>

    <!-- Action Card Style for Payment Hub -->
    <Style x:Key="ActionCardStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="MinHeight" Value="120"/>
        <Setter Property="MaxHeight" Value="150"/>
    </Style>

    <!-- Action Card Button Style -->
    <Style x:Key="ActionCardButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
        <Setter Property="VerticalContentAlignment" Value="Stretch"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeCardHoverBackground}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeAccentColor}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced DataGrid Style for Dark Mode -->
    <Style x:Key="EnhancedDataGridStyle" TargetType="DataGrid" BasedOn="{StaticResource StandardizedDataGridStyle}">
        <Setter Property="Background" Value="{DynamicResource ThemeCardBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
        <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource ThemeCardBorder}"/>
        <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource ThemeCardBorder}"/>
        <Setter Property="RowBackground" Value="{DynamicResource ThemeCardBackground}"/>
        <Setter Property="AlternatingRowBackground" Value="{DynamicResource ThemeDataGridAlternatingRow}"/>
        <Setter Property="ColumnHeaderStyle">
            <Setter.Value>
                <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource MaterialDesignDataGridColumnHeader}">
                    <Setter Property="Background" Value="{DynamicResource ThemeDataGridHeader}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
                    <Setter Property="BorderBrush" Value="{DynamicResource ThemeCardBorder}"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                </Style>
            </Setter.Value>
        </Setter>
        <Setter Property="RowStyle">
            <Setter.Value>
                <Style TargetType="DataGridRow" BasedOn="{StaticResource MaterialDesignDataGridRow}">
                    <Setter Property="Background" Value="{DynamicResource ThemeCardBackground}"/>
                    <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeDataGridRowHover}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{DynamicResource ThemeAccentColor}"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Enhanced TabControl Style for Dark Mode -->
    <Style x:Key="EnhancedTabControlStyle" TargetType="TabControl">
        <Setter Property="Background" Value="{DynamicResource ThemeTabBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeCardBorder}"/>
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <!-- Enhanced TabItem Style for Dark Mode -->
    <Style x:Key="EnhancedTabItemStyle" TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
        <Setter Property="Background" Value="{DynamicResource ThemeTabBackground}"/>
        <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource ThemeCardBorder}"/>
        <Style.Triggers>
            <Trigger Property="IsSelected" Value="True">
                <Setter Property="Background" Value="{DynamicResource ThemeTabSelected}"/>
                <Setter Property="Foreground" Value="{DynamicResource ThemeTextPrimary}"/>
            </Trigger>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{DynamicResource ThemeTabHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- KPI Card Style -->
    <Style x:Key="KPICardStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="0,0,10,15"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
    </Style>

    <!-- Filter Panel Style -->
    <Style x:Key="FilterPanelStyle" TargetType="materialDesign:Card">
        <Setter Property="Margin" Value="0,0,0,15"/>
        <Setter Property="Padding" Value="15"/>
        <Setter Property="materialDesign:ElevationAssist.Elevation" Value="Dp2"/>
    </Style>

    <!-- Loading Overlay Style -->
    <Style x:Key="LoadingOverlayStyle" TargetType="Grid">
        <Setter Property="Background" Value="#80000000"/>
        <Setter Property="Visibility" Value="Collapsed"/>
    </Style>

</ResourceDictionary>
