<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewmodels="clr-namespace:WPFGrowerApp.ViewModels"
                    xmlns:views="clr-namespace:WPFGrowerApp.Views"                    
                    xmlns:viewsReports="clr-namespace:WPFGrowerApp.Views.Reports"
                    xmlns:dialogs="clr-namespace:WPFGrowerApp.Views.Dialogs" 
                    xmlns:vm="clr-namespace:WPFGrowerApp.ViewModels"
                    xmlns:vmDialogs="clr-namespace:WPFGrowerApp.ViewModels.Dialogs">  <!-- Added namespace for dialog VMs -->

    <!-- View Model to View Mappings -->
    <DataTemplate DataType="{x:Type viewmodels:DashboardViewModel}">
        <views:DashboardView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:DashboardAnalyticsViewModel}">
        <views:DashboardAnalyticsView />
    </DataTemplate>
    
    <!-- Grower Management Mappings -->
    <DataTemplate DataType="{x:Type vm:GrowerManagementHostViewModel}">
        <views:GrowerManagementHostView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:GrowerListViewModel}">
        <views:GrowerListView />
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:GrowerDetailViewModel}">
        <views:GrowerDetailView />
    </DataTemplate>
    
    <!-- Reports Mappings -->
    <DataTemplate DataType="{x:Type viewmodels:ReportsHostViewModel}">
        <views:ReportsHostView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:ReportsCardsViewModel}">
        <views:ReportsCardsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:GrowerReportViewModel}">
        <views:GrowerReportView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:ReportsViewModel}"> <!-- This is now the 'Test Reports' view -->
        <viewsReports:ReportsView /> <!-- Reverted to views: prefix as reports: namespace is not defined -->
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:PaymentSummaryReportViewModel}">
        <viewsReports:PaymentSummaryReportView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:ImportViewModel}">
        <views:ImportUserControl />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:ChangePasswordViewModel}">
        <views:ChangePasswordView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:PaymentRunViewModel}">
        <views:PaymentRunView />
    </DataTemplate>

    <!-- Settings Host Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:SettingsHostViewModel}">
        <views:SettingsHostView />
    </DataTemplate>

    <!-- Product Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:ProductViewModel}">
        <views:ProductView />
    </DataTemplate>

    <!-- Process Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:ProcessViewModel}">
        <views:ProcessView />
    </DataTemplate>

    <!-- Depot Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:DepotViewModel}">
        <views:DepotView />
    </DataTemplate>

    <!-- Receipt Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:ReceiptViewModel}">
        <views:ReceiptView />
    </DataTemplate>

    <!-- Price Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:PriceViewModel}">
        <views:PriceView />
    </DataTemplate>

    <!-- Container Type Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:ContainerViewModel}">
        <views:ContainerView />
    </DataTemplate>

    <!-- Payment Group Management Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:PaymentGroupViewModel}">
        <views:PaymentGroupView />
    </DataTemplate>

    <!-- Appearance Settings Mapping -->
    <DataTemplate DataType="{x:Type viewmodels:AppearanceSettingsViewModel}">
        <views:AppearanceSettingsView />
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:UserManagementViewModel}">
        <views:UserManagementView/>
    </DataTemplate>

    <!-- Dialog View Model Mappings -->
    <DataTemplate DataType="{x:Type vm:PaymentTestRunReportViewModel}">
        <dialogs:PaymentTestRunReportView/>
    </DataTemplate>

    <!-- Use the correct namespace prefix 'vmDialogs' -->
    <DataTemplate DataType="{x:Type vmDialogs:PayGroupEditDialogViewModel}"> 
        <dialogs:PayGroupEditDialogView/>
    </DataTemplate>
    
    <!-- Phase 1 - Payment Management View Mappings -->
    <DataTemplate DataType="{x:Type viewmodels:PaymentBatchViewModel}">
        <views:PaymentBatchListView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:PaymentBatchDetailViewModel}">
        <views:PaymentBatchDetailView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:ChequeReviewViewModel}">
        <views:ChequeReviewView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:FinalPaymentViewModel}">
        <views:FinalPaymentView />
    </DataTemplate>
    
    <!-- Phase 2 - Enhanced Payment Processing View Mappings -->
    <DataTemplate DataType="{x:Type viewmodels:ChequePreparationViewModel}">
        <views:ChequePreparationView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:ChequeDeliveryViewModel}">
        <views:ChequeDeliveryView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:ElectronicPaymentProcessingViewModel}">
        <views:ElectronicPaymentProcessingView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:PaymentStatusDashboardViewModel}">
        <views:PaymentStatusDashboardView />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type viewmodels:PaymentReconciliationViewModel}">
        <views:PaymentReconciliationView />
    </DataTemplate>
    
    <!-- Add other dialog mappings here if needed -->

</ResourceDictionary>
