            <setting name="RememberPassword" serializeAs="String">
                <value>False</value>
            </setting>
            <setting name="RememberedPassword" serializeAs="String">
                <value></value>
            </setting>
        </WPFGrowerApp.Properties.Settings>
    </userSettings>

</configuration>
